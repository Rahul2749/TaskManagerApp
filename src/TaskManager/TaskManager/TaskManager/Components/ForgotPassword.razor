@* Components/Pages/ForgotPassword.razor *@
@page "/forgot-password"
@layout LoginLayout
@using TaskManager.Client.Components
@using TaskManager.Client.Components.Layout
@inject NavigationManager Navigation
@rendermode @(new InteractiveWebAssemblyRenderMode(prerender: false))

<div class="forgot-wrapper">
    <div class="forgot-container">
        <div class="forgot-card">
            <!-- Brand Header -->
            <div class="forgot-header">
                <div class="icon-wrapper">
                    <span class="reset-icon">🔑</span>
                </div>
                <h1 class="forgot-title">Forgot Password?</h1>
                <p class="forgot-subtitle">No worries! Enter your email address and we'll send you a link to reset your password.</p>
            </div>

            @if (isSuccess)
            {
                <!-- Success Message -->
                <div class="alert alert-success">
                    <span class="alert-icon">✅</span>
                    <div class="alert-content">
                        <div class="alert-title">Email Sent!</div>
                        <div class="alert-text">We've sent a password reset link to <strong>@email</strong>. Please check your inbox.</div>
                    </div>
                </div>

                <button type="button" class="btn btn-secondary btn-back" @onclick="BackToLogin">
                    <span class="btn-arrow-left">←</span>
                    <span>Back to Login</span>
                </button>
            }
            else
            {
                <!-- Error Alert -->
                @if (!string.IsNullOrEmpty(errorMessage))
                {
                    <div class="alert alert-error">
                        <span class="alert-icon">⚠️</span>
                        <span class="alert-text">@errorMessage</span>
                    </div>
                }

                <!-- Forgot Password Form -->
                <form class="forgot-form" @onsubmit="HandleSubmit" @onsubmit:preventDefault>
                    <div class="form-group">
                        <label class="form-label">Email Address</label>
                        <div class="input-wrapper">
                            <span class="input-icon">📧</span>
                            <input type="email" class="form-control" @bind="email" placeholder="Enter your email" required />
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary btn-submit" disabled="@isLoading">
                        @if (isLoading)
                        {
                            <span class="spinner-loading"></span>
                            <span>Sending...</span>
                        }
                        else
                        {
                            <span>Send Reset Link</span>
                            <span class="btn-arrow">→</span>
                        }
                    </button>
                </form>

                <!-- Back to Login Link -->
                <div class="forgot-footer">
                    <a href="/login" class="back-link">
                        <span class="back-arrow">←</span>
                        <span>Back to Login</span>
                    </a>
                </div>
            }
        </div>

        <!-- Decorative Elements -->
        <div class="decorative-circles">
            <div class="circle circle-1"></div>
            <div class="circle circle-2"></div>
            <div class="circle circle-3"></div>
        </div>
    </div>
</div>

<style>
    /* FORGOT WRAPPER */
    .forgot-wrapper {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, #4318FF 0%, #7551FF 100%);
        padding: 2rem;
        position: relative;
        overflow: hidden;
    }

        /* Ceramic Texture Overlay */
        .forgot-wrapper::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-image: radial-gradient(circle at 20% 50%, rgba(255, 255, 255, 0.1) 0%, transparent 50%), radial-gradient(circle at 80% 80%, rgba(255, 255, 255, 0.1) 0%, transparent 50%);
            pointer-events: none;
        }

    .forgot-container {
        position: relative;
        z-index: 1;
        width: 100%;
        max-width: 460px;
    }

    /* FORGOT CARD */
    .forgot-card {
        background: linear-gradient(135deg, rgba(255, 255, 255, 0.98), rgba(248, 249, 254, 0.98));
        backdrop-filter: blur(20px);
        border-radius: 32px;
        padding: 3rem 2.5rem;
        box-shadow: 0 25px 70px rgba(0, 0, 0, 0.25);
        border: 1px solid rgba(255, 255, 255, 0.3);
        position: relative;
    }

    /* HEADER */
    .forgot-header {
        text-align: center;
        margin-bottom: 2.5rem;
    }

    .icon-wrapper {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 80px;
        height: 80px;
        background: linear-gradient(135deg, rgba(67, 24, 255, 0.1), rgba(117, 81, 255, 0.1));
        border-radius: 50%;
        margin-bottom: 1.5rem;
        border: 1px solid rgba(67, 24, 255, 0.15);
    }

    .reset-icon {
        font-size: 2.5rem;
        line-height: 1;
    }

    .forgot-title {
        font-size: 2rem;
        font-weight: 800;
        color: #2B3674;
        margin: 0 0 0.75rem 0;
        line-height: 1.2;
        letter-spacing: -0.02em;
    }

    .forgot-subtitle {
        color: #707EAE;
        font-size: 0.9375rem;
        margin: 0;
        line-height: 1.6;
    }

    /* ALERT */
    .alert {
        padding: 16px 18px;
        border-radius: 12px;
        margin-bottom: 1.5rem;
        display: flex;
        align-items: flex-start;
        gap: 12px;
        animation: slideDown 0.3s ease;
    }

    @@keyframes slideDown {
        from

    {
        opacity: 0;
        transform: translateY(-10px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    .alert-success {
        background: #D1FAE5;
        color: #065F46;
        border: 1px solid #6EE7B7;
    }

    .alert-error {
        background: #FEE2E2;
        color: #991B1B;
        border: 1px solid #FCA5A5;
    }

    .alert-icon {
        font-size: 1.25rem;
        flex-shrink: 0;
        line-height: 1;
    }

    .alert-content {
        flex: 1;
    }

    .alert-title {
        font-size: 0.9375rem;
        font-weight: 700;
        margin-bottom: 0.25rem;
    }

    .alert-text {
        font-size: 0.875rem;
        font-weight: 500;
        line-height: 1.5;
    }

    /* FORM */
    .forgot-form {
        margin-bottom: 1.5rem;
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-label {
        display: block;
        margin-bottom: 0.5rem;
        font-weight: 600;
        color: #2B3674;
        font-size: 0.875rem;
    }

    .input-wrapper {
        position: relative;
        display: flex;
        align-items: center;
    }

    .input-icon {
        position: absolute;
        left: 16px;
        font-size: 1.125rem;
        pointer-events: none;
        z-index: 1;
    }

    .form-control {
        width: 100%;
        padding: 14px 16px 14px 48px;
        border: 2px solid rgba(67, 24, 255, 0.15);
        border-radius: 12px;
        font-size: 0.9375rem;
        transition: all 0.2s;
        background: white;
        color: #2B3674;
        font-family: inherit;
    }

        .form-control:focus {
            outline: none;
            border-color: #4318FF;
            box-shadow: 0 0 0 4px rgba(67, 24, 255, 0.1);
        }

        .form-control::placeholder {
            color: #A3AED0;
        }

    /* BUTTONS */
    .btn-submit {
        width: 100%;
        padding: 16px 24px;
        font-size: 1rem;
        font-weight: 700;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        height: 56px;
        background: linear-gradient(135deg, #4318FF 0%, #7551FF 100%);
        border: none;
        border-radius: 12px;
        color: white;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0 8px 25px rgba(67, 24, 255, 0.3);
    }

        .btn-submit:hover:not(:disabled) {
            transform: translateY(-2px);
            box-shadow: 0 12px 35px rgba(67, 24, 255, 0.4);
        }

        .btn-submit:active:not(:disabled) {
            transform: translateY(0);
        }

        .btn-submit:disabled {
            opacity: 0.7;
            cursor: not-allowed;
        }

    .btn-back {
        width: 100%;
        padding: 16px 24px;
        font-size: 1rem;
        font-weight: 700;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        height: 56px;
        background: white;
        border: 2px solid rgba(67, 24, 255, 0.2);
        border-radius: 12px;
        color: #4318FF;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
    }

        .btn-back:hover {
            background: #F8F9FE;
            border-color: #4318FF;
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
        }

    .btn-arrow {
        transition: transform 0.2s;
        font-size: 1.125rem;
    }

    .btn-submit:hover:not(:disabled) .btn-arrow {
        transform: translateX(4px);
    }

    .btn-arrow-left {
        transition: transform 0.2s;
        font-size: 1.125rem;
    }

    .btn-back:hover .btn-arrow-left {
        transform: translateX(-4px);
    }

    /* SPINNER */
    .spinner-loading {
        display: inline-block;
        width: 18px;
        height: 18px;
        border: 2px solid rgba(255, 255, 255, 0.3);
        border-top-color: white;
        border-radius: 50%;
        animation: spin 0.8s linear infinite;
    }

    @@keyframes spin {
        to

    {
        transform: rotate(360deg);
    }

    }

    /* FOOTER */
    .forgot-footer {
        text-align: center;
        padding-top: 1.5rem;
        border-top: 1px solid rgba(67, 24, 255, 0.1);
    }

    .back-link {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        color: #4318FF;
        text-decoration: none;
        font-weight: 600;
        font-size: 0.9375rem;
        transition: all 0.2s;
    }

        .back-link:hover {
            color: #7551FF;
            gap: 12px;
        }

    .back-arrow {
        transition: transform 0.2s;
        font-size: 1.125rem;
    }

    .back-link:hover .back-arrow {
        transform: translateX(-4px);
    }

    /* DECORATIVE CIRCLES */
    .decorative-circles {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        overflow: hidden;
        pointer-events: none;
        z-index: 0;
    }

    .circle {
        position: absolute;
        border-radius: 50%;
        background: rgba(255, 255, 255, 0.08);
        animation: float 20s infinite ease-in-out;
    }

    .circle-1 {
        width: 400px;
        height: 400px;
        top: -200px;
        right: -150px;
        animation-delay: 0s;
    }

    .circle-2 {
        width: 300px;
        height: 300px;
        bottom: -120px;
        left: -100px;
        animation-delay: 3s;
    }

    .circle-3 {
        width: 200px;
        height: 200px;
        top: 50%;
        left: -100px;
        animation-delay: 6s;
    }

    @@keyframes float {
        0%, 100%

    {
        transform: translateY(0) scale(1);
    }

    50% {
        transform: translateY(-30px) scale(1.05);
    }

    }

    /* RESPONSIVE */
    @@media (max-width: 768px) {
        .forgot-wrapper

    {
        padding: 1.5rem;
    }

    .forgot-card {
        padding: 2.5rem 2rem;
        border-radius: 24px;
    }

    .forgot-title {
        font-size: 1.75rem;
    }

    .forgot-subtitle {
        font-size: 0.875rem;
    }

    .icon-wrapper {
        width: 70px;
        height: 70px;
    }

    .reset-icon {
        font-size: 2.25rem;
    }

    }

    @@media (max-width: 480px) {
        .forgot-wrapper

    {
        padding: 1rem;
    }

    .forgot-card {
        padding: 2rem 1.5rem;
    }

    .forgot-header {
        margin-bottom: 2rem;
    }

    .icon-wrapper {
        width: 60px;
        height: 60px;
    }

    .reset-icon {
        font-size: 2rem;
    }

    .forgot-title {
        font-size: 1.5rem;
    }

    .forgot-subtitle {
        font-size: 0.8125rem;
    }

    .form-control {
        padding: 12px 14px 12px 44px;
        font-size: 0.875rem;
    }

    .input-icon {
        font-size: 1rem;
        left: 14px;
    }

    .btn-submit,
    .btn-back {
        padding: 14px 20px;
        font-size: 0.9375rem;
        height: 52px;
    }

    .circle-1 {
        width: 250px;
        height: 250px;
    }

    .circle-2 {
        width: 200px;
        height: 200px;
    }

    .circle-3 {
        display: none;
    }

    }

    /* TOUCH DEVICES */
    @@media (hover: none) and (pointer: coarse) {
        .form-control

    {
        font-size: 16px; /* Prevents zoom on iOS */
    }

    }
</style>

@code {
    private string email = string.Empty;
    private bool isLoading = false;
    private bool isSuccess = false;
    private string errorMessage = string.Empty;

    private async Task HandleSubmit()
    {
        if (string.IsNullOrWhiteSpace(email))
        {
            errorMessage = "Please enter your email address.";
            return;
        }

        isLoading = true;
        errorMessage = string.Empty;

        try
        {
            // Simulate API call
            await Task.Delay(1500);

            // TODO: Replace with actual API call
            // await PasswordService.SendResetLinkAsync(email);

            isSuccess = true;
        }
        catch (Exception ex)
        {
            errorMessage = "An error occurred. Please try again later.";
            Console.WriteLine($"Forgot password error: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private void BackToLogin()
    {
        Navigation.NavigateTo("/login");
    }
}