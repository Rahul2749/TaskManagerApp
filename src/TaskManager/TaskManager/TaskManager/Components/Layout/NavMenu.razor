<style>
    .sidebar-nav {
        display: flex;
        flex-direction: column;
        gap: 6px;
    }

    .nav-item {
        display: flex;
        align-items: center;
        gap: 14px;
        padding: 12px 16px;
        border-radius: 10px;
        color: rgba(255, 255, 255, 0.7);
        text-decoration: none;
        font-weight: 500;
        font-size: 0.95rem;
        transition: all 0.2s ease;
        position: relative;
    }

        .nav-item:hover {
            background: rgba(255, 255, 255, 0.1);
            color: white;
        }

        .nav-item.active {
            background: rgba(255, 255, 255, 0.15);
            color: white;
            font-weight: 600;
        }

            .nav-item.active::before {
                content: '';
                position: absolute;
                left: 0;
                top: 50%;
                transform: translateY(-50%);
                width: 4px;
                height: 70%;
                background: white;
                border-radius: 0 4px 4px 0;
            }

    .nav-icon {
        font-size: 1.25rem;
        display: flex;
        align-items: center;
        justify-content: center;
        min-width: 24px;
    }

    .nav-text {
        white-space: nowrap;
    }

    /* Collapsed state - center icons and show tooltip */
    .sidebar-collapsed .nav-item {
        justify-content: center;
    }

        /* Tooltip on hover when collapsed */
        .sidebar-collapsed .nav-item:hover::after {
            content: attr(title);
            position: absolute;
            left: calc(100% + 12px);
            background: var(--text-primary);
            color: white;
            padding: 8px 12px;
            border-radius: 8px;
            font-size: 0.875rem;
            white-space: nowrap;
            z-index: 1000;
            box-shadow: var(--shadow-md);
        }
</style>

@code {
    [Parameter]
    public bool IsCollapsed { get; set; } = false;

    private string currentUserRole = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        var user = await AuthService.GetCurrentUserAsync();
        if (user != null)
        {
            currentUserRole = user.Role;
        }
    }
}