@using TaskManager.Services
@* Components/Layout/NavMenu.razor *@
@rendermode InteractiveServer
@inject IAuthService AuthService
@inject NavigationManager Navigation

<aside class="app-sidebar @(isSidebarCollapsed ? "collapsed" : "")">
    <!-- Brand Logo -->
    <div class="sidebar-brand">
        <span class="brand-icon">📋</span>
        @if (!isSidebarCollapsed)
        {
            <span class="brand-text">TaskManager</span>
        }
    </div>

    <!-- Navigation Menu -->
    <nav class="sidebar-nav">
        <div class="nav-section">
            @if (!string.IsNullOrEmpty(currentUserRole))
            {
                <div class="nav-menu">
                    @if (currentUserRole == "SuperAdmin")
                    {
                        <NavLink class="nav-link" href="superadmin/dashboard" Match="NavLinkMatch.All" title="Dashboard">
                            <span class="nav-icon">🏠</span>
                            @if (!isSidebarCollapsed)
                            {
                                <span class="nav-text">Dashboard</span>
                            }
                        </NavLink>

                        <NavLink class="nav-link" href="superadmin/organizations" title="Organizations">
                            <span class="nav-icon">🏢</span>
                            @if (!isSidebarCollapsed)
                            {
                                <span class="nav-text">Organizations</span>
                            }
                        </NavLink>

                        <NavLink class="nav-link" href="superadmin/users" title="All Users">
                            <span class="nav-icon">👥</span>
                            @if (!isSidebarCollapsed)
                            {
                                <span class="nav-text">All Users</span>
                            }
                        </NavLink>

                        <NavLink class="nav-link" href="superadmin/reports" title="Reports">
                            <span class="nav-icon">📊</span>
                            @if (!isSidebarCollapsed)
                            {
                                <span class="nav-text">Reports</span>
                            }
                        </NavLink>
                    }
                    else if (currentUserRole == "OrganizationAdmin" || currentUserRole == "Admin")
                    {
                        <NavLink class="nav-link" href="admin/dashboard" Match="NavLinkMatch.All" title="Dashboard">
                            <span class="nav-icon">🏠</span>
                            @if (!isSidebarCollapsed)
                            {
                                <span class="nav-text">Dashboard</span>
                            }
                        </NavLink>

                        <NavLink class="nav-link" href="admin/projects" title="Projects">
                            <span class="nav-icon">📁</span>
                            @if (!isSidebarCollapsed)
                            {
                                <span class="nav-text">Projects</span>
                            }
                        </NavLink>

                        <NavLink class="nav-link" href="admin/tasks" title="Tasks">
                            <span class="nav-icon">✅</span>
                            @if (!isSidebarCollapsed)
                            {
                                <span class="nav-text">Tasks</span>
                            }
                        </NavLink>

                        <NavLink class="nav-link" href="admin/team" title="Team">
                            <span class="nav-icon">👥</span>
                            @if (!isSidebarCollapsed)
                            {
                                <span class="nav-text">Team</span>
                            }
                        </NavLink>

                        <NavLink class="nav-link" href="admin/reviews" title="Reviews">
                            <span class="nav-icon">⭐</span>
                            @if (!isSidebarCollapsed)
                            {
                                <span class="nav-text">Reviews</span>
                            }
                        </NavLink>
                    }
                    else if (currentUserRole == "Manager")
                    {
                        <NavLink class="nav-link" href="manager/dashboard" Match="NavLinkMatch.All" title="Dashboard">
                            <span class="nav-icon">🏠</span>
                            @if (!isSidebarCollapsed)
                            {
                                <span class="nav-text">Dashboard</span>
                            }
                        </NavLink>

                        <NavLink class="nav-link" href="manager/projects" title="Projects">
                            <span class="nav-icon">📁</span>
                            @if (!isSidebarCollapsed)
                            {
                                <span class="nav-text">Projects</span>
                            }
                        </NavLink>

                        <NavLink class="nav-link" href="manager/tasks" title="Tasks">
                            <span class="nav-icon">✅</span>
                            @if (!isSidebarCollapsed)
                            {
                                <span class="nav-text">Tasks</span>
                            }
                        </NavLink>

                        <NavLink class="nav-link" href="manager/team" title="Team">
                            <span class="nav-icon">👥</span>
                            @if (!isSidebarCollapsed)
                            {
                                <span class="nav-text">Team</span>
                            }
                        </NavLink>

                        <NavLink class="nav-link" href="manager/reviews" title="Reviews">
                            <span class="nav-icon">⭐</span>
                            @if (!isSidebarCollapsed)
                            {
                                <span class="nav-text">Reviews</span>
                            }
                        </NavLink>
                    }
                    else if (currentUserRole == "User")
                    {
                        <NavLink class="nav-link" href="user/dashboard" Match="NavLinkMatch.All" title="Dashboard">
                            <span class="nav-icon">🏠</span>
                            @if (!isSidebarCollapsed)
                            {
                                <span class="nav-text">Dashboard</span>
                            }
                        </NavLink>

                        <NavLink class="nav-link" href="user/tasks" title="My Tasks">
                            <span class="nav-icon">✅</span>
                            @if (!isSidebarCollapsed)
                            {
                                <span class="nav-text">My Tasks</span>
                            }
                        </NavLink>

                        <NavLink class="nav-link" href="user/calendar" title="Calendar">
                            <span class="nav-icon">📅</span>
                            @if (!isSidebarCollapsed)
                            {
                                <span class="nav-text">Calendar</span>
                            }
                        </NavLink>

                        <NavLink class="nav-link" href="user/timesheet" title="Timesheet">
                            <span class="nav-icon">⏱️</span>
                            @if (!isSidebarCollapsed)
                            {
                                <span class="nav-text">Timesheet</span>
                            }
                        </NavLink>
                    }
                </div>
            }
        </div>
    </nav>

    <!-- Quick Actions -->
    <div class="sidebar-footer">
        @if (!isSidebarCollapsed)
        {
            <div class="section-label">QUICK ACTIONS</div>
        }

        <button class="sidebar-link" title="Settings" @onclick="OpenSettings">
            <span class="link-icon">⚙️</span>
            @if (!isSidebarCollapsed)
            {
                <span class="link-text">Settings</span>
            }
        </button>

        <button class="sidebar-link" title="Help" @onclick="OpenHelp">
            <span class="link-icon">❓</span>
            @if (!isSidebarCollapsed)
            {
                <span class="link-text">Help</span>
            }
        </button>

        @if (!string.IsNullOrEmpty(projectCode))
        {
            <div class="project-badge">
                <span class="badge-icon">#</span>
                @if (!isSidebarCollapsed)
                {
                    <span class="badge-text">@projectCode</span>
                }
            </div>
        }
    </div>

    <!-- Toggle Button -->
    <button class="sidebar-toggle" @onclick="ToggleSidebar" @onclick:stopPropagation="true" title="@(isSidebarCollapsed ? "Expand sidebar" : "Collapse sidebar")">
        <span>@(isSidebarCollapsed ? "→" : "←")</span>
    </button>
</aside>

<style>
    /* SIDEBAR */
    .app-sidebar {
        width: var(--sidebar-width);
        background: var(--bg-sidebar);
        border-right: 1px solid var(--border-color);
        position: fixed;
        left: 0;
        top: 0;
        bottom: 0;
        display: flex;
        flex-direction: column;
        transition: width 0.3s ease;
        z-index: 1000;
    }

        .app-sidebar.collapsed {
            width: var(--sidebar-collapsed-width);
        }

    /* BRAND */
    .sidebar-brand {
        height: 80px;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 12px;
        padding: 0 var(--space-lg);
        border-bottom: 1px solid var(--border-light);
    }

    .brand-icon {
        font-size: 1.75rem;
    }

    .brand-text {
        font-size: 1.25rem;
        font-weight: 700;
        color: var(--primary-navy);
    }

    /* SIDEBAR NAV */
    .sidebar-nav {
        flex: 1;
        padding: var(--space-lg) var(--space-md);
        overflow-y: auto;
        overflow-x: hidden;
    }

    .nav-section {
        margin-bottom: var(--space-xl);
    }

    .nav-menu {
        display: flex;
        flex-direction: column;
        gap: 4px;
    }

    .nav-link {
        display: flex;
        align-items: center;
        gap: 14px;
        padding: 12px 16px;
        border-radius: var(--radius-sm);
        color: var(--text-sidebar);
        text-decoration: none;
        font-weight: 500;
        font-size: 0.95rem;
        transition: all 0.2s ease;
        position: relative;
    }

        .nav-link:hover {
            background: var(--bg-sidebar-hover);
            color: var(--text-sidebar-active);
        }

        .nav-link.active {
            background: var(--bg-sidebar-active);
            color: var(--text-sidebar-active);
            font-weight: 600;
        }

            .nav-link.active::before {
                content: '';
                position: absolute;
                left: 0;
                top: 50%;
                transform: translateY(-50%);
                width: 4px;
                height: 70%;
                background: var(--primary-navy);
                border-radius: 0 4px 4px 0;
            }

    .nav-icon {
        font-size: 1.25rem;
        display: flex;
        align-items: center;
        justify-content: center;
        min-width: 24px;
    }

    .nav-text {
        white-space: nowrap;
    }

    /* Collapsed state */
    .app-sidebar.collapsed .nav-link {
        justify-content: center;
    }

        /* Tooltip on hover when collapsed */
        .app-sidebar.collapsed .nav-link:hover::after {
            content: attr(title);
            position: absolute;
            left: calc(100% + 12px);
            background: var(--text-primary);
            color: white;
            padding: 8px 14px;
            border-radius: 8px;
            font-size: 0.875rem;
            white-space: nowrap;
            z-index: 1001;
            box-shadow: var(--shadow-md);
        }

    /* SIDEBAR FOOTER */
    .sidebar-footer {
        padding: var(--space-lg) var(--space-md);
        border-top: 1px solid var(--border-light);
    }

    .section-label {
        font-size: 0.7rem;
        font-weight: 700;
        color: var(--text-sidebar);
        letter-spacing: 1px;
        margin-bottom: var(--space-md);
        padding: 0 var(--space-sm);
    }

    .sidebar-link {
        width: 100%;
        display: flex;
        align-items: center;
        gap: var(--space-md);
        padding: 12px var(--space-md);
        background: none;
        border: none;
        border-radius: var(--radius-sm);
        color: var(--text-sidebar);
        cursor: pointer;
        transition: all 0.2s;
        font-size: 0.95rem;
        font-weight: 500;
        text-align: left;
    }

        .sidebar-link:hover {
            background: var(--bg-sidebar-hover);
            color: var(--text-sidebar-active);
        }

    .link-icon {
        font-size: 1.25rem;
        display: flex;
        align-items: center;
        justify-content: center;
        min-width: 24px;
    }

    .app-sidebar.collapsed .sidebar-link {
        justify-content: center;
    }

        .app-sidebar.collapsed .sidebar-link:hover::after {
            content: attr(title);
            position: absolute;
            left: calc(100% + 12px);
            background: var(--text-primary);
            color: white;
            padding: 8px 14px;
            border-radius: 8px;
            font-size: 0.875rem;
            white-space: nowrap;
            z-index: 1001;
            box-shadow: var(--shadow-md);
        }

    .project-badge {
        margin-top: var(--space-md);
        padding: var(--space-sm) var(--space-md);
        background: var(--bg-sidebar-hover);
        border-radius: var(--radius-sm);
        font-family: 'Courier New', monospace;
        font-weight: 700;
        color: var(--text-primary);
        display: flex;
        align-items: center;
        gap: var(--space-sm);
        justify-content: center;
    }

    /* SIDEBAR TOGGLE */
    .sidebar-toggle {
        position: absolute;
        right: -12px;
        top: 90px;
        width: 24px;
        height: 24px;
        border-radius: 50%;
        background: var(--accent-purple);
        color: white;
        border: none;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: var(--shadow-md);
        transition: all 0.2s;
        font-size: 0.875rem;
        z-index: 10;
    }

        .sidebar-toggle:hover {
            transform: scale(1.1);
            background: var(--accent-purple-hover);
        }

        .sidebar-toggle:active {
            transform: scale(0.95);
        }

    /* RESPONSIVE */
    @@media (max-width: 1024px) {
        .app-sidebar {
            transform: translateX(-100%);
        }

            .app-sidebar.open {
                transform: translateX(0);
            }
    }

    /* Scrollbar styling */
    .sidebar-nav::-webkit-scrollbar {
        width: 6px;
    }

    .sidebar-nav::-webkit-scrollbar-track {
        background: transparent;
    }

    .sidebar-nav::-webkit-scrollbar-thumb {
        background: var(--border-color);
        border-radius: 3px;
    }

        .sidebar-nav::-webkit-scrollbar-thumb:hover {
            background: var(--text-muted);
        }
</style>

@code {
    private bool isSidebarCollapsed = false;
    private string currentUserRole = string.Empty;
    private string projectCode = "4374151";

    protected override async Task OnInitializedAsync()
    {
        var user = await AuthService.GetCurrentUserAsync();
        if (user != null)
        {
            currentUserRole = user.Role;
        }
    }

    private void ToggleSidebar()
    {
        isSidebarCollapsed = !isSidebarCollapsed;

        // Update the main layout class
        var js = "document.querySelector('.app-layout')?.classList.toggle('sidebar-collapsed')";
        // Note: You might need IJSRuntime for this, but CSS handles it automatically

        StateHasChanged();
    }

    private void OpenSettings()
    {
        Navigation.NavigateTo("/settings");
    }

    private void OpenHelp()
    {
        // TODO: Show help dialog or navigate to help page
        Console.WriteLine("Help clicked");
    }
}