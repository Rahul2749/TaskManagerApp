@using TaskManager.Services
@* Components/Layout/MainLayout.razor *@
@inherits LayoutComponentBase
@inject IAuthService AuthService
@inject NavigationManager Navigation

<div class="app-layout @(isSidebarCollapsed ? "sidebar-collapsed" : "")">
    <!-- Sidebar -->
    <aside class="app-sidebar">
        <div class="sidebar-header">
            <div class="brand">
                <span class="brand-icon">📋</span>
                @if (!isSidebarCollapsed)
                {
                    <span class="brand-text">TaskManager</span>
                }
            </div>
        </div>

        <div class="sidebar-content">
            <div class="sidebar-section">
                @if (!isSidebarCollapsed)
                {
                    <div class="section-label">MENU</div>
                }
                <NavMenu IsCollapsed="@isSidebarCollapsed" />
            </div>
        </div>

        <div class="sidebar-footer">
            @if (!isSidebarCollapsed)
            {
                <div class="quick-actions-label">QUICK ACTIONS</div>
            }
            <button class="sidebar-action" title="Settings">
                <span class="action-icon">⚙️</span>
                @if (!isSidebarCollapsed)
                {
                    <span>Settings</span>
                }
            </button>
            <button class="sidebar-action" title="Help">
                <span class="action-icon">❓</span>
                @if (!isSidebarCollapsed)
                {
                    <span>Help</span>
                }
            </button>

            @if (!string.IsNullOrEmpty(projectCode))
            {
                <div class="project-badge">
                    <span class="badge-icon">#</span>
                    @if (!isSidebarCollapsed)
                    {
                        <span>@projectCode</span>
                    }
                </div>
            }
        </div>

        <button class="sidebar-toggle-btn" @onclick="ToggleSidebar">
            <span>@(isSidebarCollapsed ? "→" : "←")</span>
        </button>
    </aside>

    <!-- Main Content -->
    <div class="app-main">
        <header class="app-header">
            <div class="header-left">
                <h1 class="page-title">@currentPageTitle</h1>
            </div>

            <div class="header-right">
                <button class="icon-button notification-btn" title="Notifications">
                    <span>🔔</span>
                    <span class="notification-badge">3</span>
                </button>

                <button class="icon-button" title="Help">
                    <span>❓</span>
                </button>

                @if (!string.IsNullOrEmpty(currentUserName))
                {
                    <div class="user-dropdown-wrapper">
                        <button class="user-menu-btn" @onclick="ToggleUserMenu">
                            <div class="avatar">
                                @currentUserName.Substring(0, 1).ToUpper()
                            </div>
                            <span class="user-name">@currentUserName</span>
                            <span class="dropdown-arrow">▼</span>
                        </button>

                        @if (showUserMenu)
                        {
                            <div class="user-dropdown-menu">
                                <div class="dropdown-user-info">
                                    <div class="avatar avatar-lg">
                                        @currentUserName.Substring(0, 1).ToUpper()
                                    </div>
                                    <div>
                                        <div class="user-fullname">@currentUserName</div>
                                        <div class="user-email">@currentUserEmail</div>
                                    </div>
                                </div>
                                <div class="dropdown-divider"></div>
                                <a href="#" class="dropdown-link">
                                    <span>👤</span> My Profile
                                </a>
                                <a href="#" class="dropdown-link">
                                    <span>⚙️</span> Settings
                                </a>
                                <div class="dropdown-divider"></div>
                                <button class="dropdown-link logout-btn" @onclick="Logout">
                                    <span>🚪</span> Logout
                                </button>
                            </div>
                        }
                    </div>
                }
            </div>
        </header>

        <main class="app-content">
            @Body
        </main>
    </div>
</div>

<style>
    .app-layout {
        display: flex;
        min-height: 100vh;
        background: var(--background-main);
    }

    /* SIDEBAR */
    .app-sidebar {
        width: var(--sidebar-width);
        background: var(--background-sidebar);
        position: fixed;
        left: 0;
        top: 0;
        bottom: 0;
        display: flex;
        flex-direction: column;
        transition: width 0.3s ease;
        z-index: 1000;
    }

    .sidebar-collapsed .app-sidebar {
        width: var(--sidebar-collapsed-width);
    }

    .sidebar-header {
        height: var(--header-height);
        display: flex;
        align-items: center;
        justify-content: center;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }

    .brand {
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .brand-icon {
        font-size: 1.8rem;
    }

    .brand-text {
        font-size: 1.25rem;
        font-weight: 700;
        color: var(--text-white);
    }

    .sidebar-content {
        flex: 1;
        overflow-y: auto;
        padding: var(--spacing-lg) var(--spacing-md);
    }

    .sidebar-section {
        margin-bottom: var(--spacing-xl);
    }

    .section-label {
        font-size: 0.7rem;
        font-weight: 700;
        color: var(--text-secondary);
        letter-spacing: 1px;
        margin-bottom: var(--spacing-md);
        padding: 0 var(--spacing-sm);
    }

    .sidebar-footer {
        padding: var(--spacing-lg) var(--spacing-md);
        border-top: 1px solid rgba(255, 255, 255, 0.1);
    }

    .quick-actions-label {
        font-size: 0.7rem;
        font-weight: 700;
        color: var(--text-secondary);
        letter-spacing: 1px;
        margin-bottom: var(--spacing-md);
        padding: 0 var(--spacing-sm);
    }

    .sidebar-action {
        width: 100%;
        display: flex;
        align-items: center;
        gap: var(--spacing-md);
        padding: var(--spacing-sm) var(--spacing-md);
        background: none;
        border: none;
        color: rgba(255, 255, 255, 0.7);
        border-radius: var(--border-radius-sm);
        cursor: pointer;
        transition: all 0.2s;
        font-size: 0.95rem;
    }

        .sidebar-action:hover {
            background: rgba(255, 255, 255, 0.1);
            color: white;
        }

    .action-icon {
        font-size: 1.2rem;
    }

    .project-badge {
        margin-top: var(--spacing-md);
        padding: var(--spacing-sm) var(--spacing-md);
        background: rgba(255, 255, 255, 0.1);
        border-radius: var(--border-radius-sm);
        color: white;
        font-family: 'Courier New', monospace;
        display: flex;
        align-items: center;
        gap: var(--spacing-sm);
        font-weight: 600;
    }

    .sidebar-toggle-btn {
        position: absolute;
        right: -12px;
        top: 90px;
        width: 24px;
        height: 24px;
        border-radius: 50%;
        background: var(--accent-color);
        color: white;
        border: none;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: var(--shadow-md);
        transition: all 0.2s;
    }

        .sidebar-toggle-btn:hover {
            transform: scale(1.1);
        }

    /* MAIN CONTENT */
    .app-main {
        flex: 1;
        margin-left: var(--sidebar-width);
        transition: margin-left 0.3s ease;
        display: flex;
        flex-direction: column;
    }

    .sidebar-collapsed .app-main {
        margin-left: var(--sidebar-collapsed-width);
    }

    .app-header {
        height: var(--header-height);
        background: var(--background-card);
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 0 var(--spacing-xl);
        box-shadow: var(--shadow-sm);
        position: sticky;
        top: 0;
        z-index: 100;
    }

    .page-title {
        font-size: 1.75rem;
        font-weight: 700;
        color: var(--text-primary);
        margin: 0;
    }

    .header-right {
        display: flex;
        align-items: center;
        gap: var(--spacing-md);
    }

    .notification-btn {
        position: relative;
    }

    .notification-badge {
        position: absolute;
        top: -4px;
        right: -4px;
        background: #FF6B6B;
        color: white;
        font-size: 0.65rem;
        padding: 2px 6px;
        border-radius: 10px;
        font-weight: 700;
    }

    /* USER MENU */
    .user-dropdown-wrapper {
        position: relative;
    }

    .user-menu-btn {
        display: flex;
        align-items: center;
        gap: var(--spacing-sm);
        padding: 8px 16px;
        background: var(--background-main);
        border: none;
        border-radius: 50px;
        cursor: pointer;
        transition: all 0.2s;
    }

        .user-menu-btn:hover {
            box-shadow: var(--shadow-sm);
        }

    .user-name {
        font-weight: 600;
        color: var(--text-primary);
    }

    .dropdown-arrow {
        font-size: 0.7rem;
        color: var(--text-secondary);
    }

    .user-dropdown-menu {
        position: absolute;
        top: calc(100% + 10px);
        right: 0;
        width: 280px;
        background: var(--background-card);
        border-radius: var(--border-radius);
        box-shadow: var(--shadow-lg);
        border: 1px solid var(--border-color);
        z-index: 1001;
    }

    .dropdown-user-info {
        padding: var(--spacing-lg);
        display: flex;
        align-items: center;
        gap: var(--spacing-md);
    }

    .user-fullname {
        font-weight: 700;
        color: var(--text-primary);
    }

    .user-email {
        font-size: 0.85rem;
        color: var(--text-secondary);
    }

    .dropdown-divider {
        height: 1px;
        background: var(--border-color);
        margin: var(--spacing-sm) 0;
    }

    .dropdown-link {
        display: flex;
        align-items: center;
        gap: var(--spacing-md);
        padding: var(--spacing-md) var(--spacing-lg);
        color: var(--text-primary);
        text-decoration: none;
        background: none;
        border: none;
        width: 100%;
        text-align: left;
        cursor: pointer;
        transition: all 0.2s;
    }

        .dropdown-link:hover {
            background: var(--background-main);
        }

    .logout-btn {
        color: #FF6B6B;
    }

    /* CONTENT AREA */
    .app-content {
        flex: 1;
        padding: var(--spacing-xl);
    }

    /* RESPONSIVE */
    @@media (max-width: 1024px) {
        .app-sidebar

    {
        transform: translateX(-100%);
    }

    .app-main {
        margin-left: 0;
    }

    }
</style>

@code {
    private string currentUserName = string.Empty;
    private string currentUserEmail = string.Empty;
    private string currentPageTitle = "Dashboard";
    private string projectCode = "4374151";
    private bool isSidebarCollapsed = false;
    private bool showUserMenu = false;

    protected override async Task OnInitializedAsync()
    {
        var user = await AuthService.GetCurrentUserAsync();
        if (user != null)
        {
            currentUserName = user.FullName;
            currentUserEmail = user.Email;
        }

        Navigation.LocationChanged += (s, e) => UpdatePageTitle();
        UpdatePageTitle();
    }

    private void UpdatePageTitle()
    {
        var path = Navigation.ToBaseRelativePath(Navigation.Uri);
        var segments = path.Split('/');
        currentPageTitle = segments.Length > 1 ?
            char.ToUpper(segments[segments.Length - 1][0]) + segments[segments.Length - 1].Substring(1).Replace("-", " ")
            : "Dashboard";
        StateHasChanged();
    }

    private void ToggleSidebar()
    {
        isSidebarCollapsed = !isSidebarCollapsed;
    }

    private void ToggleUserMenu()
    {
        showUserMenu = !showUserMenu;
    }

    private async Task Logout()
    {
        await AuthService.LogoutAsync();
        Navigation.NavigateTo("/login", true);
    }
}