@* Components/Pages/Login.razor *@
@page "/login"
@layout LoginLayout
@using TaskManager.Client.Components
@using TaskManager.Client.Components.Layout
@using TaskManager.Shared.DTOs
@using TaskManager.Client.Services
@inject IAuthServiceClient AuthService
@inject NavigationManager Navigation
@rendermode @(new InteractiveWebAssemblyRenderMode(prerender: false))

<div class="login-wrapper">
    <div class="login-container">
        <div class="login-card">
            <!-- Brand Header -->
            <div class="login-header">
                <div class="brand-logo">
                    <span class="logo-icon">📋</span>
                    <span class="logo-text">TaskManager</span>
                </div>
                <h1 class="login-title">Welcome Back</h1>
                <p class="login-subtitle">Sign in to continue to your workspace</p>
            </div>

            <!-- Error Alert -->
            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="alert alert-error">
                    <span class="alert-icon">⚠️</span>
                    <span class="alert-text">@errorMessage</span>
                </div>
            }

            <!-- Login Form -->
            <EditForm Model="loginModel" OnValidSubmit="HandleLogin" class="login-form">
                <DataAnnotationsValidator />

                <div class="form-group">
                    <label class="form-label">Username</label>
                    <InputText class="form-control" @bind-Value="loginModel.Username" placeholder="Enter your username" autocomplete="username" />
                    <ValidationMessage For="@(() => loginModel.Username)" class="validation-message" />
                </div>

                <div class="form-group">
                    <label class="form-label">Password</label>
                    <InputText type="password" class="form-control" @bind-Value="loginModel.Password" placeholder="Enter your password" autocomplete="current-password" />
                    <ValidationMessage For="@(() => loginModel.Password)" class="validation-message" />
                </div>

                <button type="submit" class="btn btn-primary btn-login" disabled="@isLoading">
                    @if (isLoading)
                    {
                        <span class="spinner-loading"></span>
                        <span>Signing in...</span>
                    }
                    else
                    {
                        <span>Sign In</span>
                    }
                </button>
            </EditForm>

            <!-- Demo Credentials -->
            <div class="login-footer">
                <div class="demo-card">
                    <div class="demo-header">
                        <span class="demo-icon">🔑</span>
                        <span class="demo-title">Demo Credentials</span>
                    </div>
                    <div class="demo-content">
                        <div class="demo-item">
                            <span class="demo-label">Username:</span>
                            <code class="demo-value">admin</code>
                        </div>
                        <div class="demo-item">
                            <span class="demo-label">Password:</span>
                            <code class="demo-value">Admin@123</code>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Decorative Elements -->
        <div class="decorative-circles">
            <div class="circle circle-1"></div>
            <div class="circle circle-2"></div>
            <div class="circle circle-3"></div>
        </div>
    </div>
</div>

<style>
    /* LOGIN WRAPPER */
    .login-wrapper {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, var(--primary-navy) 0%, #1a2347 100%);
        padding: var(--space-lg);
        position: relative;
        overflow: hidden;
    }

    .login-container {
        position: relative;
        z-index: 1;
        width: 100%;
        max-width: 480px;
    }

    /* LOGIN CARD */
    .login-card {
        background: white;
        border-radius: var(--radius-card);
        padding: 48px 40px;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
        position: relative;
    }

    /* BRAND HEADER */
    .login-header {
        text-align: center;
        margin-bottom: 40px;
    }

    .brand-logo {
        display: inline-flex;
        align-items: center;
        gap: 12px;
        margin-bottom: 24px;
        padding: 12px 20px;
        background: var(--bg-main);
        border-radius: var(--radius-md);
    }

    .logo-icon {
        font-size: 2rem;
        line-height: 1;
    }

    .logo-text {
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--primary-navy);
    }

    .login-title {
        font-size: 1.75rem;
        font-weight: 700;
        color: var(--text-primary);
        margin: 0 0 8px 0;
        line-height: 1.2;
    }

    .login-subtitle {
        color: var(--text-secondary);
        font-size: 0.95rem;
        margin: 0;
    }

    /* ALERT */
    .alert {
        padding: 14px 16px;
        border-radius: var(--radius-sm);
        margin-bottom: 24px;
        display: flex;
        align-items: flex-start;
        gap: 12px;
        animation: slideDown 0.3s ease;
    }

    @@keyframes slideDown {
        from {
            opacity: 0;
            transform: translateY(-10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .alert-error {
        background: #FEE2E2;
        color: #991B1B;
        border: 1px solid #FCA5A5;
    }

    .alert-icon {
        font-size: 1.25rem;
        flex-shrink: 0;
        line-height: 1;
    }

    .alert-text {
        flex: 1;
        font-size: 0.9rem;
        font-weight: 500;
    }

    /* FORM */
    .login-form {
        margin-bottom: 32px;
    }

    .form-group {
        margin-bottom: 24px;
    }

    .form-label {
        display: block;
        margin-bottom: 8px;
        font-weight: 600;
        color: var(--text-primary);
        font-size: 0.9rem;
    }

    .form-control {
        width: 100%;
        padding: 14px 16px;
        border: 2px solid var(--border-color);
        border-radius: var(--radius-sm);
        font-size: 0.95rem;
        transition: all 0.2s;
        background: white;
        color: var(--text-primary);
        font-family: inherit;
    }

        .form-control:focus {
            outline: none;
            border-color: var(--accent-purple);
            box-shadow: 0 0 0 3px rgba(67, 24, 255, 0.1);
        }

        .form-control::placeholder {
            color: var(--text-muted);
        }

    .validation-message {
        color: #DC2626;
        font-size: 0.85rem;
        margin-top: 6px;
        display: block;
        font-weight: 500;
    }

    /* LOGIN BUTTON */
    .btn-login {
        width: 100%;
        padding: 14px 24px;
        font-size: 1rem;
        font-weight: 600;
        margin-top: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
        height: 52px;
    }

        .btn-login:disabled {
            opacity: 0.7;
            cursor: not-allowed;
        }

    /* SPINNER */
    .spinner-loading {
        display: inline-block;
        width: 16px;
        height: 16px;
        border: 2px solid rgba(255, 255, 255, 0.3);
        border-top-color: white;
        border-radius: 50%;
        animation: spin 0.8s linear infinite;
    }

    @@keyframes spin {
        to {
            transform: rotate(360deg);
        }
    }

    /* LOGIN FOOTER */
    .login-footer {
        padding-top: 32px;
        border-top: 1px solid var(--border-light);
    }

    .demo-card {
        background: var(--bg-main);
        border-radius: var(--radius-md);
        padding: 20px;
        border: 1px solid var(--border-light);
    }

    .demo-header {
        display: flex;
        align-items: center;
        gap: 10px;
        margin-bottom: 16px;
    }

    .demo-icon {
        font-size: 1.25rem;
        line-height: 1;
    }

    .demo-title {
        font-size: 0.9rem;
        font-weight: 700;
        color: var(--text-primary);
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .demo-content {
        display: flex;
        flex-direction: column;
        gap: 12px;
    }

    .demo-item {
        display: flex;
        align-items: center;
        gap: 12px;
        font-size: 0.9rem;
    }

    .demo-label {
        color: var(--text-secondary);
        font-weight: 500;
        min-width: 80px;
    }

    .demo-value {
        background: white;
        padding: 6px 12px;
        border-radius: 6px;
        font-family: 'Courier New', monospace;
        font-size: 0.875rem;
        color: var(--accent-purple);
        font-weight: 600;
        border: 1px solid var(--border-color);
        user-select: all;
    }

    /* DECORATIVE CIRCLES */
    .decorative-circles {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        overflow: hidden;
        pointer-events: none;
        z-index: 0;
    }

    .circle {
        position: absolute;
        border-radius: 50%;
        background: rgba(255, 255, 255, 0.05);
        animation: float 20s infinite ease-in-out;
    }

    .circle-1 {
        width: 300px;
        height: 300px;
        top: -150px;
        right: -100px;
        animation-delay: 0s;
    }

    .circle-2 {
        width: 200px;
        height: 200px;
        bottom: -80px;
        left: -60px;
        animation-delay: 3s;
    }

    .circle-3 {
        width: 150px;
        height: 150px;
        top: 50%;
        left: -75px;
        animation-delay: 6s;
    }

    @@keyframes float {
        0%, 100% {
            transform: translateY(0) scale(1);
        }

        50% {
            transform: translateY(-30px) scale(1.05);
        }
    }

    /* RESPONSIVE */
    @@media (max-width: 768px) {
        .login-wrapper {
            padding: var(--space-md);
        }

        .login-card {
            padding: 40px 32px;
        }

        .login-title {
            font-size: 1.5rem;
        }

        .login-subtitle {
            font-size: 0.875rem;
        }

        .logo-text {
            font-size: 1.375rem;
        }

        .logo-icon {
            font-size: 1.75rem;
        }

        .demo-card {
            padding: 16px;
        }
    }

    @@media (max-width: 480px) {
        .login-wrapper {
            padding: var(--space-sm);
        }

        .login-card {
            padding: 32px 24px;
        }

        .login-header {
            margin-bottom: 32px;
        }

        .brand-logo {
            padding: 10px 16px;
            gap: 10px;
        }

        .logo-icon {
            font-size: 1.5rem;
        }

        .logo-text {
            font-size: 1.25rem;
        }

        .login-title {
            font-size: 1.375rem;
        }

        .login-subtitle {
            font-size: 0.8125rem;
        }

        .form-control {
            padding: 12px 14px;
            font-size: 0.9rem;
        }

        .btn-login {
            padding: 12px 20px;
            font-size: 0.95rem;
            height: 48px;
        }

        .demo-item {
            flex-direction: column;
            align-items: flex-start;
            gap: 6px;
        }

        .demo-label {
            min-width: auto;
            font-size: 0.8125rem;
        }

        .demo-value {
            font-size: 0.8125rem;
            padding: 5px 10px;
        }

        .circle-1 {
            width: 200px;
            height: 200px;
        }

        .circle-2 {
            width: 150px;
            height: 150px;
        }

        .circle-3 {
            display: none;
        }
    }

    /* TOUCH DEVICES */
    @@media (hover: none) and (pointer: coarse) {
        .form-control {
            font-size: 16px; /* Prevents zoom on iOS */
        }
    }
</style>

@code {
    private LoginDto loginModel = new();
    private bool isLoading = false;
    private string errorMessage = string.Empty;

    private async Task HandleLogin()
    {
        isLoading = true;
        errorMessage = string.Empty;

        try
        {
            var success = await AuthService.LoginAsync(loginModel);

            if (success)
            {
                var user = await AuthService.GetCurrentUserAsync();

                if (user != null)
                {
                    var route = user.Role switch
                    {
                        "SuperAdmin" => "/superadmin/dashboard",
                        "OrganizationAdmin" => "/admin/dashboard",
                        "Manager" => "/manager/dashboard",
                        "User" => "/user/dashboard",
                        "Admin" => "/admin/dashboard",
                        _ => "/"
                    };

                    Navigation.NavigateTo(route, true);
                }
            }
            else
            {
                errorMessage = "Invalid username or password. Please try again.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = "An error occurred. Please try again later.";
            Console.WriteLine($"Login error: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }
}