@* Components/Pages/Login.razor *@
@page "/login"
@layout LoginLayout
@using TaskManager.Client.Components
@using TaskManager.Client.Components.Layout
@using TaskManager.Shared.DTOs
@using TaskManager.Client.Services
@inject IAuthServiceClient AuthService
@inject NavigationManager Navigation
@rendermode @(new InteractiveWebAssemblyRenderMode(prerender: false))

<div class="login-wrapper">
    <div class="login-container">
        <div class="login-card">
            <!-- Brand Header -->
            <div class="login-header">
                <div class="brand-logo">
                    <span class="logo-icon">📋</span>
                    <span class="logo-text">TaskManager</span>
                </div>
                <h1 class="login-title">Welcome Back</h1>
                <p class="login-subtitle">Sign in to continue to your workspace</p>
            </div>

            <!-- Error Alert -->
            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="alert alert-error">
                    <span class="alert-icon">⚠️</span>
                    <span class="alert-text">@errorMessage</span>
                </div>
            }

            <!-- Login Form -->
            <EditForm Model="loginModel" OnValidSubmit="HandleLogin" class="login-form">
                <DataAnnotationsValidator />

                <div class="form-group">
                    <label class="form-label">Username</label>
                    <div class="input-wrapper">
                        <span class="input-icon">👤</span>
                        <InputText class="form-control" @bind-Value="loginModel.Username" placeholder="Enter your username" autocomplete="username" />
                    </div>
                    <ValidationMessage For="@(() => loginModel.Username)" class="validation-message" />
                </div>

                <div class="form-group">
                    <label class="form-label">Password</label>
                    <div class="input-wrapper">
                        <span class="input-icon">🔒</span>
                        <InputText type="password" class="form-control" @bind-Value="loginModel.Password" placeholder="Enter your password" autocomplete="current-password" />
                    </div>
                    <ValidationMessage For="@(() => loginModel.Password)" class="validation-message" />
                </div>

                <div class="form-actions">
                    <div class="remember-me">
                        <input type="checkbox" id="rememberMe" class="checkbox" />
                        <label for="rememberMe" class="checkbox-label">Remember me</label>
                    </div>
                    <a href="/forgot-password" class="forgot-link">Forgot password?</a>
                </div>

                <button type="submit" class="btn btn-primary btn-login" disabled="@isLoading">
                    @if (isLoading)
                    {
                        <span class="spinner-loading"></span>
                        <span>Signing in...</span>
                    }
                    else
                    {
                        <span>Sign In</span>
                        <span class="btn-arrow">→</span>
                    }
                </button>
            </EditForm>

            <!-- Footer Links -->
            <div class="login-footer">
                <p class="footer-text">
                    Don't have an account?
                    <a href="/register" class="footer-link">Sign up</a>
                </p>
            </div>
        </div>

        <!-- Decorative Elements -->
        <div class="decorative-circles">
            <div class="circle circle-1"></div>
            <div class="circle circle-2"></div>
            <div class="circle circle-3"></div>
        </div>
    </div>
</div>

<style>
    /* LOGIN WRAPPER */
    .login-wrapper {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(180deg, #F8F9FE 0%, #FFFFFF 50%, #F8F9FE 100%);
        padding: 2rem;
        position: relative;
        overflow: hidden;
    }

        /* Ceramic Texture Overlay */
        .login-wrapper::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-image: radial-gradient(circle at 20% 50%, rgba(67, 24, 255, 0.03) 0%, transparent 50%), radial-gradient(circle at 80% 80%, rgba(117, 81, 255, 0.03) 0%, transparent 50%);
            pointer-events: none;
        }

    .login-container {
        position: relative;
        z-index: 1;
        width: 100%;
        max-width: 460px;
    }

    /* LOGIN CARD */
    .login-card {
        background: linear-gradient(135deg, rgba(255, 255, 255, 0.98), rgba(248, 249, 254, 0.98));
        backdrop-filter: blur(20px);
        border-radius: 32px;
        padding: 3rem 2.5rem;
        box-shadow: 0 25px 70px rgba(0, 0, 0, 0.25);
        border: 1px solid rgba(255, 255, 255, 0.3);
        position: relative;
    }

    /* BRAND HEADER */
    .login-header {
        text-align: center;
        margin-bottom: 2.5rem;
    }

    .brand-logo {
        display: inline-flex;
        align-items: center;
        gap: 12px;
        margin-bottom: 1.5rem;
        padding: 12px 24px;
        background: linear-gradient(135deg, rgba(67, 24, 255, 0.08), rgba(117, 81, 255, 0.08));
        border-radius: 50px;
        border: 1px solid rgba(67, 24, 255, 0.15);
    }

    .logo-icon {
        font-size: 1.75rem;
        line-height: 1;
    }

    .logo-text {
        font-size: 1.5rem;
        font-weight: 800;
        background: linear-gradient(135deg, #4318FF 0%, #7551FF 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .login-title {
        font-size: 2rem;
        font-weight: 800;
        color: #2B3674;
        margin: 0 0 0.5rem 0;
        line-height: 1.2;
        letter-spacing: -0.02em;
    }

    .login-subtitle {
        color: #707EAE;
        font-size: 0.9375rem;
        margin: 0;
    }

    /* ALERT */
    .alert {
        padding: 14px 16px;
        border-radius: 12px;
        margin-bottom: 1.5rem;
        display: flex;
        align-items: flex-start;
        gap: 12px;
        animation: slideDown 0.3s ease;
    }

    @@keyframes slideDown {
        from

    {
        opacity: 0;
        transform: translateY(-10px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    .alert-error {
        background: #FEE2E2;
        color: #991B1B;
        border: 1px solid #FCA5A5;
    }

    .alert-icon {
        font-size: 1.125rem;
        flex-shrink: 0;
        line-height: 1;
    }

    .alert-text {
        flex: 1;
        font-size: 0.875rem;
        font-weight: 500;
    }

    /* FORM */
    .login-form {
        margin-bottom: 1.5rem;
    }

    .form-group {
        margin-bottom: 1.25rem;
    }

    .form-label {
        display: block;
        margin-bottom: 0.5rem;
        font-weight: 600;
        color: #2B3674;
        font-size: 0.875rem;
    }

    .input-wrapper {
        position: relative;
        display: flex;
        align-items: center;
    }

    .input-icon {
        position: absolute;
        left: 16px;
        font-size: 1.125rem;
        pointer-events: none;
        z-index: 1;
    }

    .form-control {
        width: 100%;
        padding: 14px 16px 14px 48px;
        border: 2px solid rgba(67, 24, 255, 0.15);
        border-radius: 12px;
        font-size: 0.9375rem;
        transition: all 0.2s;
        background: white;
        color: #2B3674;
        font-family: inherit;
    }

        .form-control:focus {
            outline: none;
            border-color: #4318FF;
            box-shadow: 0 0 0 4px rgba(67, 24, 255, 0.1);
        }

        .form-control::placeholder {
            color: #A3AED0;
        }

    .validation-message {
        color: #DC2626;
        font-size: 0.8125rem;
        margin-top: 0.5rem;
        display: block;
        font-weight: 500;
    }

    /* FORM ACTIONS */
    .form-actions {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 1.5rem;
    }

    .remember-me {
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .checkbox {
        width: 18px;
        height: 18px;
        border: 2px solid rgba(67, 24, 255, 0.3);
        border-radius: 4px;
        cursor: pointer;
        accent-color: #4318FF;
    }

    .checkbox-label {
        font-size: 0.875rem;
        color: #707EAE;
        cursor: pointer;
        user-select: none;
    }

    .forgot-link {
        font-size: 0.875rem;
        color: #4318FF;
        text-decoration: none;
        font-weight: 600;
        transition: all 0.2s;
    }

        .forgot-link:hover {
            color: #7551FF;
            text-decoration: underline;
        }

    /* LOGIN BUTTON */
    .btn-login {
        width: 100%;
        padding: 16px 24px;
        font-size: 1rem;
        font-weight: 700;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        height: 56px;
        background: linear-gradient(135deg, #4318FF 0%, #7551FF 100%);
        border: none;
        border-radius: 12px;
        color: white;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0 8px 25px rgba(67, 24, 255, 0.3);
    }

        .btn-login:hover:not(:disabled) {
            transform: translateY(-2px);
            box-shadow: 0 12px 35px rgba(67, 24, 255, 0.4);
        }

        .btn-login:active:not(:disabled) {
            transform: translateY(0);
        }

        .btn-login:disabled {
            opacity: 0.7;
            cursor: not-allowed;
        }

    .btn-arrow {
        transition: transform 0.2s;
        font-size: 1.125rem;
    }

    .btn-login:hover:not(:disabled) .btn-arrow {
        transform: translateX(4px);
    }

    /* SPINNER */
    .spinner-loading {
        display: inline-block;
        width: 18px;
        height: 18px;
        border: 2px solid rgba(255, 255, 255, 0.3);
        border-top-color: white;
        border-radius: 50%;
        animation: spin 0.8s linear infinite;
    }

    @@keyframes spin {
        to

    {
        transform: rotate(360deg);
    }

    }

    /* LOGIN FOOTER */
    .login-footer {
        text-align: center;
        padding-top: 1.5rem;
        border-top: 1px solid rgba(67, 24, 255, 0.1);
    }

    .footer-text {
        color: #707EAE;
        font-size: 0.9375rem;
        margin: 0;
    }

    .footer-link {
        color: #4318FF;
        text-decoration: none;
        font-weight: 700;
        transition: all 0.2s;
    }

        .footer-link:hover {
            color: #7551FF;
            text-decoration: underline;
        }

    /* DECORATIVE CIRCLES */
    .decorative-circles {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        overflow: hidden;
        pointer-events: none;
        z-index: 0;
    }

    .circle {
        position: absolute;
        border-radius: 50%;
        background: rgba(255, 255, 255, 0.08);
        animation: float 20s infinite ease-in-out;
    }

    .circle-1 {
        width: 400px;
        height: 400px;
        top: -200px;
        right: -150px;
        animation-delay: 0s;
    }

    .circle-2 {
        width: 300px;
        height: 300px;
        bottom: -120px;
        left: -100px;
        animation-delay: 3s;
    }

    .circle-3 {
        width: 200px;
        height: 200px;
        top: 50%;
        left: -100px;
        animation-delay: 6s;
    }

    @@keyframes float {
        0%, 100%

    {
        transform: translateY(0) scale(1);
    }

    50% {
        transform: translateY(-30px) scale(1.05);
    }

    }

    /* RESPONSIVE */
    @@media (max-width: 768px) {
        .login-wrapper

    {
        padding: 1.5rem;
    }

    .login-card {
        padding: 2.5rem 2rem;
        border-radius: 24px;
    }

    .login-title {
        font-size: 1.75rem;
    }

    .login-subtitle {
        font-size: 0.875rem;
    }

    .logo-text {
        font-size: 1.375rem;
    }

    .logo-icon {
        font-size: 1.625rem;
    }

    }

    @@media (max-width: 480px) {
        .login-wrapper

    {
        padding: 1rem;
    }

    .login-card {
        padding: 2rem 1.5rem;
    }

    .login-header {
        margin-bottom: 2rem;
    }

    .brand-logo {
        padding: 10px 20px;
        gap: 10px;
    }

    .logo-icon {
        font-size: 1.5rem;
    }

    .logo-text {
        font-size: 1.25rem;
    }

    .login-title {
        font-size: 1.5rem;
    }

    .login-subtitle {
        font-size: 0.8125rem;
    }

    .form-control {
        padding: 12px 14px 12px 44px;
        font-size: 0.875rem;
    }

    .input-icon {
        font-size: 1rem;
        left: 14px;
    }

    .btn-login {
        padding: 14px 20px;
        font-size: 0.9375rem;
        height: 52px;
    }

    .form-actions {
        flex-direction: column;
        align-items: flex-start;
        gap: 0.75rem;
    }

    .circle-1 {
        width: 250px;
        height: 250px;
    }

    .circle-2 {
        width: 200px;
        height: 200px;
    }

    .circle-3 {
        display: none;
    }

    }

    /* TOUCH DEVICES */
    @@media (hover: none) and (pointer: coarse) {
        .form-control

    {
        font-size: 16px; /* Prevents zoom on iOS */
    }

    }
</style>

@code {
    private LoginDto loginModel = new();
    private bool isLoading = false;
    private string errorMessage = string.Empty;

    private async Task HandleLogin()
    {
        isLoading = true;
        errorMessage = string.Empty;

        try
        {
            var success = await AuthService.LoginAsync(loginModel);

            if (success)
            {
                var user = await AuthService.GetCurrentUserAsync();

                if (user != null)
                {
                    var route = user.Role switch
                    {
                        "SuperAdmin" => "/superadmin/dashboard",
                        "OrganizationAdmin" => "/admin/dashboard",
                        "Manager" => "/manager/dashboard",
                        "User" => "/user/dashboard",
                        "Admin" => "/admin/dashboard",
                        _ => "/"
                    };

                    Navigation.NavigateTo(route, true);
                }
            }
            else
            {
                errorMessage = "Invalid username or password. Please try again.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = "An error occurred. Please try again later.";
            Console.WriteLine($"Login error: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }
}