@* TaskManager.Client/Pages/Manager/ManageUsers.razor *@
@page "/manager/users"
@attribute [Authorize(Roles = "Manager")]
@inject IApiService ApiService
@inject IJSRuntime JSRuntime
@rendermode @(new InteractiveWebAssemblyRenderMode(prerender: false))

<PageTitle>Manage Users</PageTitle>

<div class="page-container">
    <!-- Page Actions -->
        <div class="page-actions">
            <div class="page-subtitle">Create and manage user accounts</div>
            <button class="btn btn-primary" @onclick="OpenCreateDialog">
                <span>➕</span> New User
            </button>
        </div>

        @if (isLoading)
        {
            <div class="loading-state">
                <div class="spinner"></div>
                <p>Loading users...</p>
            </div>
        }
        else
        {
            <div class="table-card">
                @if (users.Any())
                {
                    <div class="table-responsive">
                        <table class="data-table">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Username</th>
                                    <th>Email</th>
                                    <th>Status</th>
                                    <th>Created Date</th>
                                    <th class="text-end">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var user in users)
                                {
                                    <tr>
                                        <td class="user-name-cell">
                                            <div class="user-info">
                                                <div class="avatar avatar-sm">@user.FirstName?.Substring(0, 1)</div>
                                                <span>@user.FullName</span>
                                            </div>
                                        </td>
                                        <td>@user.Username</td>
                                        <td>@user.Email</td>
                                        <td>
                                            @if (user.IsActive)
                                            {
                                                <span class="badge badge-success">Active</span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-secondary">Inactive</span>
                                            }
                                        </td>
                                        <td>@user.CreatedAt.ToString("MMM dd, yyyy")</td>
                                        <td class="text-end">
                                            <div class="action-buttons">
                                                <button class="btn-icon" @onclick="() => OpenEditDialog(user)" title="Edit">
                                                    ✏️
                                                </button>
                                                <button class="btn-icon" @onclick="() => DeleteUser(user.Id)" title="Delete">
                                                    🗑️
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="empty-state-inline">
                        <p>No users found. Create your first user!</p>
                    </div>
                }
            </div>
        }
    </div>

@if (showDialog)
{
    <div class="modal-backdrop" @onclick="HandleBackdropClick"></div>
    <div class="modal-container">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title">@(isEditMode ? "Edit User" : "Create User")</h3>
                <button class="modal-close" @onclick="CloseDialog">✕</button>
            </div>
            <EditForm Model="userModel" OnValidSubmit="SaveUser">
                <DataAnnotationsValidator />
                <div class="modal-body">
                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="alert alert-error">
                            <span class="alert-icon">⚠️</span>
                            <span class="alert-text">@errorMessage</span>
                        </div>
                    }

                    <div class="form-row">
                        <div class="form-group">
                            <label class="form-label">First Name</label>
                            <InputText class="form-control" @bind-Value="userModel.FirstName" placeholder="Enter first name" />
                            <ValidationMessage For="@(() => userModel.FirstName)" class="validation-message" />
                        </div>

                        <div class="form-group">
                            <label class="form-label">Last Name</label>
                            <InputText class="form-control" @bind-Value="userModel.LastName" placeholder="Enter last name" />
                            <ValidationMessage For="@(() => userModel.LastName)" class="validation-message" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Username</label>
                        <InputText class="form-control" @bind-Value="userModel.Username" placeholder="Enter username" />
                        <ValidationMessage For="@(() => userModel.Username)" class="validation-message" />
                    </div>

                    <div class="form-group">
                        <label class="form-label">Email</label>
                        <InputText type="email" class="form-control" @bind-Value="userModel.Email" placeholder="Enter email address" />
                        <ValidationMessage For="@(() => userModel.Email)" class="validation-message" />
                    </div>

                    <div class="form-group">
                        <label class="form-label">Password @(isEditMode ? "(leave blank to keep current)" : "")</label>
                        <InputText type="password" class="form-control" @bind-Value="userModel.Password" placeholder="Enter password" />
                        <ValidationMessage For="@(() => userModel.Password)" class="validation-message" />
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseDialog">Cancel</button>
                    <button type="submit" class="btn btn-primary" disabled="@isSaving">
                        @if (isSaving)
                        {
                            <span class="spinner-loading"></span>
                        }
                        <span>@(isEditMode ? "Update User" : "Create User")</span>
                    </button>
                </div>
            </EditForm>
        </div>
    </div>
}

@code {
    private List<UserDto> users = new();
    private bool isLoading = true;
    private bool showDialog = false;
    private bool isEditMode = false;
    private bool isSaving = false;
    private string errorMessage = string.Empty;
    private RegisterDto userModel = new();
    private int editingUserId = 0;

    protected override async Task OnInitializedAsync()
    {
        await LoadUsers();
    }

    private async Task LoadUsers()
    {
        isLoading = true;
        try
        {
            users = await ApiService.GetUsersAsync("User") ?? new();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading users: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private void OpenCreateDialog()
    {
        isEditMode = false;
        userModel = new RegisterDto { Role = "User" };
        errorMessage = string.Empty;
        showDialog = true;
    }

    private void OpenEditDialog(UserDto user)
    {
        isEditMode = true;
        editingUserId = user.Id;
        userModel = new RegisterDto
        {
            Username = user.Username,
            Email = user.Email,
            FirstName = user.FirstName,
            LastName = user.LastName,
            Role = "User",
            Password = string.Empty
        };
        errorMessage = string.Empty;
        showDialog = true;
    }

    private void HandleBackdropClick()
    {
        CloseDialog();
    }

    private void CloseDialog()
    {
        showDialog = false;
        userModel = new();
        errorMessage = string.Empty;
        StateHasChanged();
    }

    private async Task SaveUser()
    {
        isSaving = true;
        errorMessage = string.Empty;

        try
        {
            UserDto? result;
            
            if (isEditMode)
            {
                result = await ApiService.UpdateUserAsync(editingUserId, userModel);
            }
            else
            {
                result = await ApiService.CreateUserAsync(userModel);
            }

            if (result != null)
            {
                await LoadUsers();
                CloseDialog();
            }
            else
            {
                errorMessage = "Failed to save user. Username or email may already exist.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error: {ex.Message}";
        }
        finally
        {
            isSaving = false;
        }
    }

    private async Task DeleteUser(int userId)
    {
        if (await JSRuntime.InvokeAsync<bool>("confirm", "Are you sure you want to delete this user?"))
        {
            try
            {
                var success = await ApiService.DeleteUserAsync(userId);
                if (success)
                {
                    await LoadUsers();
                }
            }
            catch (Exception ex)
            {
                Console.WriteLine($"Error deleting user: {ex.Message}");
            }
        }
    }
}