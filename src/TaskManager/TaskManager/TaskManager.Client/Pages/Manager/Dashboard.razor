@* Client/Pages/Manager/Dashboard.razor *@
@page "/manager/dashboard"
@using TaskManager.Shared.DTOs
@inject IApiService ApiService
@rendermode @(new InteractiveWebAssemblyRenderMode(prerender: false))

<PageTitle>Manager Dashboard</PageTitle>

<div class="dashboard-container">
    <!-- Page Header -->
    <div class="page-header">
        <div class="header-content">
            <h2 class="project-heading">Project: Nebula Launch</h2>
        </div>
        <div class="header-actions">
            <button class="icon-button" title="Project Info">
                <span>ℹ️</span>
            </button>
            <button class="icon-button notification-btn" title="Notifications">
                <span>🔔</span>
                <span class="notification-dot"></span>
            </button>
            <button class="btn btn-primary" @onclick="OpenAddTaskModal">
                Add Task
            </button>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="loading-state">
            <div class="spinner"></div>
            <p>Loading tasks...</p>
        </div>
    }
    else
    {
        <!-- Kanban Board -->
        <div class="kanban-board">
            <!-- To Do Column -->
            <div class="kanban-column">
                <div class="column-header">
                    <span class="column-title">To Do</span>
                    <span class="task-count">@todoTasks.Count</span>
                </div>
                <div class="column-content">
                    @foreach (var task in todoTasks)
                    {
                        <div class="task-card" @onclick="() => OpenTaskDetails(task)">
                            <div class="task-header">
                                <div class="task-assignee">
                                    <div class="avatar avatar-sm">
                                        @(task.AssignedTo?.FirstName?.Substring(0, 1) ?? "?")
                                    </div>
                                    <span class="assignee-name">@(task.AssignedTo?.FullName ?? "Unassigned")</span>
                                </div>
                            </div>
                            <div class="task-id">ID: @task.Id?.ToString("D8")</div>
                            <div class="task-content">
                                <div class="task-title">@task.Title</div>
                                @if (!string.IsNullOrEmpty(task.Description))
                                {
                                    <div class="task-description">@task.Description</div>
                                }
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- In Progress Column -->
            <div class="kanban-column">
                <div class="column-header">
                    <span class="column-title">In Progress</span>
                    <span class="task-count">@inProgressTasks.Count</span>
                </div>
                <div class="column-content">
                    @foreach (var task in inProgressTasks)
                    {
                        <div class="task-card" @onclick="() => OpenTaskDetails(task)">
                            <div class="task-header">
                                <div class="task-assignee">
                                    <div class="avatar avatar-sm">
                                        @(task.AssignedTo?.FirstName?.Substring(0, 1) ?? "?")
                                    </div>
                                    <span class="assignee-name">@(task.AssignedTo?.FullName ?? "Unassigned")</span>
                                </div>
                            </div>
                            <div class="task-id">ID: @task.Id?.ToString("D8")</div>
                            <div class="task-content">
                                <div class="task-title">@task.Title</div>
                                @if (!string.IsNullOrEmpty(task.Description))
                                {
                                    <div class="task-description">@task.Description</div>
                                }
                            </div>
                            @if (task.EstimatedHours.HasValue && task.EstimatedHours > 0)
                            {
                                <div class="task-progress">
                                    <div class="progress">
                                        <div class="progress-bar" style="width: @GetProgressPercentage(task)%"></div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>

            <!-- Completed Column -->
            <div class="kanban-column">
                <div class="column-header">
                    <span class="column-title">Completed</span>
                    <span class="task-count">@completedTasks.Count</span>
                </div>
                <div class="column-content">
                    @foreach (var task in completedTasks)
                    {
                        <div class="task-card completed" @onclick="() => OpenTaskDetails(task)">
                            <div class="task-header">
                                <div class="task-assignee">
                                    <div class="avatar avatar-sm">
                                        @(task.AssignedTo?.FirstName?.Substring(0, 1) ?? "?")
                                    </div>
                                    <span class="assignee-name">@(task.AssignedTo?.FullName ?? "Unassigned")</span>
                                </div>
                            </div>
                            <div class="task-id">ID: @task.Id?.ToString("D8")</div>
                            <div class="task-content">
                                <div class="task-title">@task.Title</div>
                                @if (!string.IsNullOrEmpty(task.Description))
                                {
                                    <div class="task-description">@task.Description</div>
                                }
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Bottom Actions -->
        <div class="dashboard-footer">
            <button class="btn btn-secondary">
                Assign Task
            </button>
            <button class="btn btn-primary">
                Submit Review
            </button>
        </div>
    }
</div>

<style>
    .dashboard-container {
        max-width: 1600px;
        margin: 0 auto;
    }

    /* PAGE HEADER */
    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 32px;
    }

    .project-heading {
        font-size: 1.75rem;
        font-weight: 700;
        color: var(--text-primary);
        margin: 0;
    }

    .header-actions {
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .notification-btn {
        position: relative;
    }

    .notification-dot {
        position: absolute;
        top: 8px;
        right: 8px;
        width: 8px;
        height: 8px;
        background: #FF6B6B;
        border-radius: 50%;
        border: 2px solid var(--background-card);
    }

    /* KANBAN BOARD */
    .kanban-board {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 24px;
        margin-bottom: 32px;
    }

    .kanban-column {
        background: var(--background-main);
        border-radius: var(--border-radius-lg);
        padding: 20px;
        min-height: 500px;
    }

    .column-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
    }

    .column-title {
        font-size: 0.875rem;
        font-weight: 700;
        text-transform: uppercase;
        color: var(--text-secondary);
        letter-spacing: 0.5px;
    }

    .task-count {
        background: var(--background-card);
        color: var(--text-secondary);
        padding: 4px 10px;
        border-radius: 20px;
        font-size: 0.75rem;
        font-weight: 700;
    }

    .column-content {
        display: flex;
        flex-direction: column;
        gap: 16px;
    }

    /* TASK CARDS */
    .task-card {
        background: var(--background-card);
        border-radius: var(--border-radius);
        padding: 16px;
        border: 1px solid var(--border-color);
        cursor: pointer;
        transition: all 0.2s ease;
    }

        .task-card:hover {
            transform: translateY(-2px);
            box-shadow: var(--shadow-md);
            border-color: var(--accent-color);
        }

        .task-card.completed {
            opacity: 0.8;
        }

    .task-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 12px;
    }

    .task-assignee {
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .assignee-name {
        font-size: 0.875rem;
        font-weight: 600;
        color: var(--text-primary);
    }

    .task-id {
        font-size: 0.75rem;
        color: var(--text-muted);
        margin-bottom: 12px;
        font-family: 'Courier New', monospace;
    }

    .task-content {
        margin-bottom: 12px;
    }

    .task-title {
        font-size: 0.875rem;
        font-weight: 600;
        color: var(--text-primary);
        margin-bottom: 6px;
        line-height: 1.4;
    }

    .task-description {
        font-size: 0.8rem;
        color: var(--text-secondary);
        line-height: 1.4;
    }

    .task-progress {
        margin-top: 12px;
    }

    /* FOOTER ACTIONS */
    .dashboard-footer {
        display: flex;
        justify-content: flex-end;
        gap: 16px;
    }

    /* LOADING STATE */
    .loading-state {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        min-height: 400px;
        gap: 16px;
    }

    .spinner {
        width: 48px;
        height: 48px;
        border: 4px solid var(--border-color);
        border-top-color: var(--accent-color);
        border-radius: 50%;
        animation: spin 1s linear infinite;
    }

    @@keyframes spin {
        to {
            transform: rotate(360deg);
        }
    }

    /* RESPONSIVE */
    @@media (max-width: 1200px) {
        .kanban-board {
            grid-template-columns: 1fr;
        }
    }

    @@media (max-width: 768px) {
        .page-header {
            flex-direction: column;
            align-items: flex-start;
            gap: 16px;
        }

        .header-actions {
            width: 100%;
            justify-content: space-between;
        }

        .dashboard-footer {
            flex-direction: column;
        }

            .dashboard-footer .btn {
                width: 100%;
            }
    }
</style>

@code {
    private bool isLoading = true;
    private List<TaskDto> todoTasks = new();
    private List<TaskDto> inProgressTasks = new();
    private List<TaskDto> completedTasks = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadTasks();
    }

    private async Task LoadTasks()
    {
        isLoading = true;
        try
        {
            var allTasks = await ApiService.GetTasksAsync() ?? new();

            todoTasks = allTasks.Where(t => t.Status == "NotAssigned" || t.Status == "Assigned").ToList();
            inProgressTasks = allTasks.Where(t => t.Status == "InProgress").ToList();
            completedTasks = allTasks.Where(t => t.Status == "Completed" || t.Status == "Tested" || t.Status == "Closed").ToList();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading tasks: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private double GetProgressPercentage(TaskDto task)
    {
        if (task.EstimatedHours.HasValue && task.EstimatedHours > 0)
        {
            return Math.Min((double)task.ActualHours / (double)task.EstimatedHours * 100, 100);
        }
        return 0;
    }

    private void OpenTaskDetails(TaskDto task)
    {
        // TODO: Navigate to task details or open modal
        Console.WriteLine($"Opening task: {task.Title}");
    }

    private void OpenAddTaskModal()
    {
        // TODO: Open add task modal
        Console.WriteLine("Opening add task modal");
    }
}