@* TaskManager.Client/Pages/Manager/ProjectUserMapping.razor *@
@page "/manager/project-users"
@attribute [Authorize(Roles = "Manager")]
@inject IApiService ApiService
@rendermode @(new InteractiveWebAssemblyRenderMode(prerender: false))

<PageTitle>Project User Mapping</PageTitle>

<div class="page-container">
    <div class="page-subtitle-section">
            <div class="page-subtitle">Assign users to projects</div>
        </div>

        @if (isLoading)
        {
            <div class="loading-state">
                <div class="spinner"></div>
                <p>Loading data...</p>
            </div>
        }
        else
        {
            <div class="mapping-layout">
                <!-- Assignment Form -->
                <div class="assignment-section">
                    <div class="section-card">
                        <div class="card-header">
                            <h3 class="card-title">Assign Users to Project</h3>
                        </div>

                        <div class="card-body">
                            @if (!string.IsNullOrEmpty(successMessage))
                            {
                                <div class="alert alert-success">
                                    <span class="alert-icon">✅</span>
                                    <span class="alert-text">@successMessage</span>
                                    <button class="alert-close" @onclick="() => successMessage = string.Empty">✕</button>
                                </div>
                            }

                            @if (!string.IsNullOrEmpty(errorMessage))
                            {
                                <div class="alert alert-error">
                                    <span class="alert-icon">⚠️</span>
                                    <span class="alert-text">@errorMessage</span>
                                    <button class="alert-close" @onclick="() => errorMessage = string.Empty">✕</button>
                                </div>
                            }

                            <div class="form-group">
                                <label class="form-label">Select Project</label>
                                <select class="form-control" @onchange="OnProjectSelected">
                                    <option value="">-- Select a Project --</option>
                                    @foreach (var project in projects)
                                    {
                                        <option value="@project.Id">@project.Name</option>
                                    }
                                </select>
                            </div>

                            @if (selectedProjectId.HasValue)
                            {
                                <div class="users-section">
                                    <div class="section-header">
                                        <label class="form-label">Available Users</label>
                                        <div class="select-buttons">
                                            <button class="btn-text" @onclick="SelectAll">Select All</button>
                                            <button class="btn-text" @onclick="DeselectAll">Deselect All</button>
                                        </div>
                                    </div>

                                    <div class="users-list">
                                        @if (availableUsers.Any())
                                        {
                                            @foreach (var user in availableUsers)
                                            {
                                                <label class="user-checkbox-item">
                                                    <input type="checkbox"
                                                           class="checkbox-input"
                                                           checked="@IsUserSelected(user.Id)"
                                                           @onchange="@((e) => ToggleUser(user.Id, (bool)e.Value!))">
                                                    <div class="user-checkbox-content">
                                                        <div class="avatar avatar-sm">@user.FirstName?.Substring(0, 1)</div>
                                                        <div class="user-details">
                                                            <div class="user-name">@user.FullName</div>
                                                            <div class="user-email">@user.Email</div>
                                                        </div>
                                                    </div>
                                                </label>
                                            }
                                        }
                                        else
                                        {
                                            <div class="empty-state-inline">
                                                <p>No users available</p>
                                            </div>
                                        }
                                    </div>

                                    <div class="action-buttons-section">
                                        <button class="btn btn-primary btn-full" @onclick="SaveMapping" disabled="@isSaving">
                                            @if (isSaving)
                                            {
                                                <span class="spinner-loading"></span>
                                            }
                                            <span>Save Assignment</span>
                                        </button>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <!-- Projects Overview -->
                <div class="overview-section">
                    <div class="section-card">
                        <div class="card-header">
                            <h3 class="card-title">Projects Overview</h3>
                        </div>

                        <div class="card-body">
                            @if (projects.Any())
                            {
                                <div class="projects-list">
                                    @foreach (var project in projects)
                                    {
                                        <div class="project-item">
                                            <div class="project-item-header">
                                                <div class="project-info">
                                                    <h4 class="project-name">@project.Name</h4>
                                                    <div class="project-meta">
                                                        @project.AssignedUsers.Count users assigned
                                                    </div>
                                                </div>
                                                <span class="badge @GetProjectStatusClass(project.Status)">
                                                    @project.Status
                                                </span>
                                            </div>

                                            @if (project.AssignedUsers.Any())
                                            {
                                                <div class="assigned-users">
                                                    @foreach (var user in project.AssignedUsers.Take(4))
                                                    {
                                                        <div class="user-badge">
                                                            <div class="avatar avatar-xs">@user.FirstName?.Substring(0, 1)</div>
                                                            <span>@user.FullName</span>
                                                        </div>
                                                    }
                                                    @if (project.AssignedUsers.Count > 4)
                                                    {
                                                        <div class="user-badge-more">
                                                            +@(project.AssignedUsers.Count - 4) more
                                                        </div>
                                                    }
                                                </div>
                                            }
                                        </div>
                                    }
                                </div>
                            }
                            else
                            {
                                <div class="empty-state-inline">
                                    <p>No projects found</p>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

@code {
    private List<ProjectDto> projects = new();
    private List<UserDto> availableUsers = new();
    private HashSet<int> selectedUserIds = new();

    private int? selectedProjectId = null;
    private bool isLoading = true;
    private bool isSaving = false;
    private string successMessage = string.Empty;
    private string errorMessage = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        isLoading = true;
        try
        {
            var projectsTask = ApiService.GetProjectsAsync();
            var usersTask = ApiService.GetUsersAsync("User");

            await Task.WhenAll(projectsTask, usersTask);

            projects = await projectsTask ?? new();
            availableUsers = await usersTask ?? new();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading data: {ex.Message}");
            errorMessage = "Failed to load data. Please refresh the page.";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task OnProjectSelected(ChangeEventArgs e)
    {
        successMessage = string.Empty;
        errorMessage = string.Empty;

        if (string.IsNullOrEmpty(e.Value?.ToString()))
        {
            selectedProjectId = null;
            selectedUserIds.Clear();
            return;
        }

        selectedProjectId = int.Parse(e.Value.ToString()!);

        try
        {
            var project = projects.FirstOrDefault(p => p.Id == selectedProjectId);
            if (project != null)
            {
                selectedUserIds = project.AssignedUsers.Select(u => u.Id).ToHashSet();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error selecting project: {ex.Message}");
            errorMessage = "Failed to load project users.";
        }
    }

    private void ToggleUser(int userId, bool isChecked)
    {
        if (isChecked)
        {
            selectedUserIds.Add(userId);
        }
        else
        {
            selectedUserIds.Remove(userId);
        }
    }

    private bool IsUserSelected(int userId)
    {
        return selectedUserIds.Contains(userId);
    }

    private void SelectAll()
    {
        selectedUserIds = availableUsers.Select(u => u.Id).ToHashSet();
    }

    private void DeselectAll()
    {
        selectedUserIds.Clear();
    }

    private async Task SaveMapping()
    {
        if (!selectedProjectId.HasValue)
        {
            errorMessage = "Please select a project first.";
            return;
        }

        isSaving = true;
        successMessage = string.Empty;
        errorMessage = string.Empty;

        try
        {
            var success = await ApiService.AssignUsersToProjectAsync(
                selectedProjectId.Value,
                selectedUserIds.ToList()
            );

            if (success)
            {
                successMessage = "Users assigned successfully!";
                await LoadData();
            }
            else
            {
                errorMessage = "Failed to assign users. Please try again.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error: {ex.Message}";
        }
        finally
        {
            isSaving = false;
        }
    }

    private string GetProjectStatusClass(string status)
    {
        return status switch
        {
            "Active" => "bg-success",
            "OnHold" => "bg-warning",
            "Completed" => "bg-primary",
            "Cancelled" => "bg-secondary",
            _ => "bg-secondary"
        };
    }
}