@* TaskManager.Client/Pages/Manager/ManageProjects.razor *@
@page "/manager/projects"
@attribute [Authorize(Roles = "Manager")]
@inject IApiService ApiService
@inject IJSRuntime JSRuntime
@rendermode @(new InteractiveWebAssemblyRenderMode(prerender: false))

<PageTitle>Manage Projects</PageTitle>

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h2 class="fw-bold text-gradient">Manage Projects</h2>
            <p class="text-muted">Create and manage your projects</p>
        </div>
        <div class="col-auto">
            <button class="btn btn-primary" @onclick="OpenCreateDialog">
                <span>➕</span> New Project
            </button>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="loading-container">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            @if (projects.Any())
            {
                @foreach (var project in projects)
                {
                    <div class="col-md-6 col-lg-4 mb-4">
                        <div class="card h-100">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start mb-3">
                                    <h5 class="card-title mb-0">@project.Name</h5>
                                    <span class="badge @GetProjectStatusClass(project.Status)">
                                        @project.Status
                                    </span>
                                </div>
                                
                                @if (!string.IsNullOrEmpty(project.Description))
                                {
                                    <p class="card-text text-muted small">
                                        @(project.Description.Length > 100 ? project.Description.Substring(0, 100) + "..." : project.Description)
                                    </p>
                                }

                                <div class="mb-3">
                                    <div class="d-flex justify-content-between mb-1">
                                        <small class="text-muted">Progress</small>
                                        <small class="text-muted">
                                            @project.CompletedTaskCount / @project.TaskCount tasks
                                        </small>
                                    </div>
                                    <div class="progress" style="height: 8px;">
                                        <div class="progress-bar" 
                                             role="progressbar" 
                                             style="width: @GetCompletionPercentage(project)%">
                                        </div>
                                    </div>
                                </div>

                                <div class="row g-2 text-center mb-3">
                                    <div class="col-6">
                                        <div class="border rounded p-2">
                                            <div class="fw-bold">@project.TaskCount</div>
                                            <small class="text-muted">Tasks</small>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="border rounded p-2">
                                            <div class="fw-bold">@project.AssignedUsers.Count</div>
                                            <small class="text-muted">Members</small>
                                        </div>
                                    </div>
                                </div>

                                @if (project.StartDate.HasValue || project.EndDate.HasValue)
                                {
                                    <div class="mb-3">
                                        <small class="text-muted">
                                            @if (project.StartDate.HasValue)
                                            {
                                                <span>Start: @project.StartDate.Value.ToString("MMM dd, yyyy")</span>
                                            }
                                            @if (project.EndDate.HasValue)
                                            {
                                                <span class="ms-2">End: @project.EndDate.Value.ToString("MMM dd, yyyy")</span>
                                            }
                                        </small>
                                    </div>
                                }
                            </div>
                            <div class="card-footer bg-transparent">
                                <div class="btn-group w-100" role="group">
                                    <button class="btn btn-sm btn-outline-primary" @onclick="() => OpenEditDialog(project)">
                                        Edit
                                    </button>
                                    <button class="btn btn-sm btn-outline-danger" @onclick="() => DeleteProject(project.Id!.Value)">
                                        Delete
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-12">
                    <div class="card">
                        <div class="card-body text-center py-5">
                            <h5 class="text-muted">No Projects Found</h5>
                            <p class="text-muted">Create your first project to get started!</p>
                            <button class="btn btn-primary" @onclick="OpenCreateDialog">
                                Create Project
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@if (showDialog)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@(isEditMode ? "Edit Project" : "Create Project")</h5>
                    <button type="button" class="btn-close" @onclick="CloseDialog"></button>
                </div>
                <EditForm Model="projectModel" OnValidSubmit="SaveProject">
                    <DataAnnotationsValidator />
                    <div class="modal-body">
                        @if (!string.IsNullOrEmpty(errorMessage))
                        {
                            <div class="alert alert-danger">@errorMessage</div>
                        }

                        <div class="row">
                            <div class="col-md-8 mb-3">
                                <label class="form-label">Project Name</label>
                                <InputText class="form-control" @bind-Value="projectModel.Name" />
                                <ValidationMessage For="@(() => projectModel.Name)" />
                            </div>

                            <div class="col-md-4 mb-3">
                                <label class="form-label">Status</label>
                                <InputSelect class="form-select" @bind-Value="projectModel.Status">
                                    <option value="Active">Active</option>
                                    <option value="OnHold">On Hold</option>
                                    <option value="Completed">Completed</option>
                                    <option value="Cancelled">Cancelled</option>
                                </InputSelect>
                                <ValidationMessage For="@(() => projectModel.Status)" />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Description</label>
                            <InputTextArea class="form-control" rows="3" @bind-Value="projectModel.Description" />
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Start Date</label>
                                <InputDate class="form-control" @bind-Value="projectModel.StartDate" />
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label">End Date</label>
                                <InputDate class="form-control" @bind-Value="projectModel.EndDate" />
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" @onclick="CloseDialog">Cancel</button>
                        <button type="submit" class="btn btn-primary" disabled="@isSaving">
                            @if (isSaving)
                            {
                                <span class="spinner-border spinner-border-sm me-2"></span>
                            }
                            @(isEditMode ? "Update" : "Create")
                        </button>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
}

@code {
    private List<ProjectDto> projects = new();
    private bool isLoading = true;
    private bool showDialog = false;
    private bool isEditMode = false;
    private bool isSaving = false;
    private string errorMessage = string.Empty;
    private ProjectDto projectModel = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadProjects();
    }

    private async Task LoadProjects()
    {
        isLoading = true;
        try
        {
            projects = await ApiService.GetProjectsAsync() ?? new();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading projects: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private void OpenCreateDialog()
    {
        isEditMode = false;
        projectModel = new ProjectDto { Status = "Active" };
        errorMessage = string.Empty;
        showDialog = true;
    }

    private void OpenEditDialog(ProjectDto project)
    {
        isEditMode = true;
        projectModel = new ProjectDto
        {
            Id = project.Id,
            Name = project.Name,
            Description = project.Description,
            StartDate = project.StartDate,
            EndDate = project.EndDate,
            Status = project.Status
        };
        errorMessage = string.Empty;
        showDialog = true;
    }

    private void CloseDialog()
    {
        showDialog = false;
        projectModel = new();
        errorMessage = string.Empty;
    }

    private async Task SaveProject()
    {
        isSaving = true;
        errorMessage = string.Empty;

        try
        {
            ProjectDto? result;
            
            if (isEditMode && projectModel.Id.HasValue)
            {
                result = await ApiService.UpdateProjectAsync(projectModel.Id.Value, projectModel);
            }
            else
            {
                result = await ApiService.CreateProjectAsync(projectModel);
            }

            if (result != null)
            {
                await LoadProjects();
                CloseDialog();
            }
            else
            {
                errorMessage = "Failed to save project. Please try again.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error: {ex.Message}";
        }
        finally
        {
            isSaving = false;
        }
    }

    private async Task DeleteProject(int projectId)
    {
        if (await JSRuntime.InvokeAsync<bool>("confirm", "Are you sure you want to delete this project? All tasks will be deleted."))
        {
            try
            {
                var success = await ApiService.DeleteProjectAsync(projectId);
                if (success)
                {
                    await LoadProjects();
                }
            }
            catch (Exception ex)
            {
                Console.WriteLine($"Error deleting project: {ex.Message}");
            }
        }
    }

    private string GetProjectStatusClass(string status)
    {
        return status switch
        {
            "Active" => "bg-success",
            "OnHold" => "bg-warning",
            "Completed" => "bg-primary",
            "Cancelled" => "bg-secondary",
            _ => "bg-secondary"
        };
    }

    private double GetCompletionPercentage(ProjectDto project)
    {
        return project.TaskCount > 0 
            ? Math.Round((double)project.CompletedTaskCount / project.TaskCount * 100, 1) 
            : 0;
    }
}