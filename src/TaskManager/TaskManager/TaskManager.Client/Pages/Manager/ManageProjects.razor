@* TaskManager.Client/Pages/Manager/ManageProjects.razor *@
@page "/manager/projects"
@attribute [Authorize(Roles = "Manager")]
@inject IApiService ApiService
@inject IJSRuntime JSRuntime
@rendermode @(new InteractiveWebAssemblyRenderMode(prerender: false))

<PageTitle>Manage Projects</PageTitle>

<div class="page-container">
    <!-- Page Actions -->
        <div class="page-actions">
            <div class="page-subtitle">Create and manage your projects</div>
            <button class="btn btn-primary" @onclick="OpenCreateDialog">
                <span>➕</span> New Project
            </button>
        </div>

        @if (isLoading)
        {
            <div class="loading-state">
                <div class="spinner"></div>
                <p>Loading projects...</p>
            </div>
        }
        else
        {
            @if (projects.Any())
            {
                <div class="projects-grid">
                    @foreach (var project in projects)
                    {
                        <div class="project-card">
                            <div class="project-header">
                                <h3 class="project-name">@project.Name</h3>
                                <span class="badge @GetProjectStatusClass(project.Status)">
                                    @project.Status
                                </span>
                            </div>

                            @if (!string.IsNullOrEmpty(project.Description))
                            {
                                <p class="project-description">
                                    @(project.Description.Length > 120 ? project.Description.Substring(0, 120) + "..." : project.Description)
                                </p>
                            }

                            <!-- Progress -->
                            <div class="project-progress">
                                <div class="progress-header">
                                    <span class="progress-label">Progress</span>
                                    <span class="progress-value">@project.CompletedTaskCount / @project.TaskCount tasks</span>
                                </div>
                                <div class="progress">
                                    <div class="progress-bar" style="width: @GetCompletionPercentage(project)%"></div>
                                </div>
                            </div>

                            <!-- Stats -->
                            <div class="project-stats">
                                <div class="stat-item">
                                    <div class="stat-icon">✅</div>
                                    <div class="stat-info">
                                        <div class="stat-number">@project.TaskCount</div>
                                        <div class="stat-text">Tasks</div>
                                    </div>
                                </div>
                                <div class="stat-item">
                                    <div class="stat-icon">👥</div>
                                    <div class="stat-info">
                                        <div class="stat-number">@project.AssignedUsers.Count</div>
                                        <div class="stat-text">Members</div>
                                    </div>
                                </div>
                            </div>

                            <!-- Dates -->
                            @if (project.StartDate.HasValue || project.EndDate.HasValue)
                            {
                                <div class="project-dates">
                                    @if (project.StartDate.HasValue)
                                    {
                                        <div class="date-item">
                                            <span class="date-label">Start:</span>
                                            <span class="date-value">@project.StartDate.Value.ToString("MMM dd, yyyy")</span>
                                        </div>
                                    }
                                    @if (project.EndDate.HasValue)
                                    {
                                        <div class="date-item">
                                            <span class="date-label">End:</span>
                                            <span class="date-value">@project.EndDate.Value.ToString("MMM dd, yyyy")</span>
                                        </div>
                                    }
                                </div>
                            }

                            <!-- Actions -->
                            <div class="project-actions">
                                <button class="btn btn-secondary" @onclick="() => OpenEditDialog(project)">
                                    Edit
                                </button>
                                <button class="btn btn-secondary" @onclick="() => DeleteProject(project.Id!.Value)">
                                    Delete
                                </button>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="empty-state">
                    <div class="empty-icon">📁</div>
                    <h3>No Projects Found</h3>
                    <p>Create your first project to get started!</p>
                    <button class="btn btn-primary" @onclick="OpenCreateDialog">
                        <span>➕</span> Create Project
                    </button>
                </div>
            }
        }
    </div>

@if (showDialog)
{
    <div class="modal-overlay">
        <div class="modal-dialog">
            <div class="modal-header">
                <h3 class="modal-title">@(isEditMode ? "Edit Project" : "Create Project")</h3>
                <button class="modal-close" @onclick="CloseDialog">✕</button>
            </div>

            <EditForm Model="projectModel" OnValidSubmit="SaveProject">
                <DataAnnotationsValidator />
                <div class="modal-body">
                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="alert alert-error">
                            <span class="alert-icon">⚠️</span>
                            <span class="alert-text">@errorMessage</span>
                        </div>
                    }

                    <div class="form-row">
                        <div class="form-group form-group-large">
                            <label class="form-label">Project Name</label>
                            <InputText class="form-control" @bind-Value="projectModel.Name" placeholder="Enter project name" />
                            <ValidationMessage For="@(() => projectModel.Name)" class="validation-message" />
                        </div>

                        <div class="form-group form-group-small">
                            <label class="form-label">Status</label>
                            <InputSelect class="form-control" @bind-Value="projectModel.Status">
                                <option value="Active">Active</option>
                                <option value="OnHold">On Hold</option>
                                <option value="Completed">Completed</option>
                                <option value="Cancelled">Cancelled</option>
                            </InputSelect>
                            <ValidationMessage For="@(() => projectModel.Status)" class="validation-message" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Description</label>
                        <InputTextArea class="form-control" rows="4" @bind-Value="projectModel.Description" placeholder="Enter project description" />
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label class="form-label">Start Date</label>
                            <InputDate class="form-control" @bind-Value="projectModel.StartDate" />
                        </div>

                        <div class="form-group">
                            <label class="form-label">End Date</label>
                            <InputDate class="form-control" @bind-Value="projectModel.EndDate" />
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseDialog">Cancel</button>
                    <button type="submit" class="btn btn-primary" disabled="@isSaving">
                        @if (isSaving)
                        {
                            <span class="spinner-loading"></span>
                        }
                        <span>@(isEditMode ? "Update Project" : "Create Project")</span>
                    </button>
                </div>
            </EditForm>
        </div>
    </div>
}

