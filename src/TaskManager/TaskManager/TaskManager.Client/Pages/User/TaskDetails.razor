@* TaskManager.Client/Pages/User/TaskDetails.razor *@
@page "/user/task/{TaskId:int}"
@attribute [Authorize(Roles = "User")]
@inject IApiService ApiService
@inject NavigationManager Navigation
@rendermode @(new InteractiveWebAssemblyRenderMode(prerender: false))

<PageTitle>Task Details</PageTitle>

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <button class="btn btn-outline-secondary btn-sm mb-2" @onclick="GoBack">
                ← Back to My Tasks
            </button>
            <h2 class="fw-bold text-gradient">Task Details</h2>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="loading-container">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (task != null)
    {
        <div class="row">
            <div class="col-lg-8 mb-4">
                <div class="card">
                    <div class="card-header">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">@task.Title</h5>
                            <span class="badge @GetStatusClass(task.Status)">
                                @FormatStatus(task.Status)
                            </span>
                        </div>
                    </div>
                    <div class="card-body">
                        @if (!string.IsNullOrEmpty(successMessage))
                        {
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                @successMessage
                                <button type="button" class="btn-close" @onclick="() => successMessage = string.Empty"></button>
                            </div>
                        }

                        <div class="mb-4">
                            <h6 class="text-muted mb-2">Description</h6>
                            @if (!string.IsNullOrEmpty(task.Description))
                            {
                                <p>@task.Description</p>
                            }
                            else
                            {
                                <p class="text-muted">No description provided</p>
                            }
                        </div>

                        <div class="row mb-4">
                            <div class="col-md-6">
                                <h6 class="text-muted mb-2">Details</h6>
                                <table class="table table-sm">
                                    <tr>
                                        <td class="fw-semibold">Project:</td>
                                        <td>@task.ProjectName</td>
                                    </tr>
                                    <tr>
                                        <td class="fw-semibold">Priority:</td>
                                        <td>
                                            <span class="badge @GetPriorityClass(task.Priority)">
                                                @task.Priority
                                            </span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="fw-semibold">Assigned By:</td>
                                        <td>@task.AssignedBy?.FullName</td>
                                    </tr>
                                    <tr>
                                        <td class="fw-semibold">Created:</td>
                                        <td>@task.CreatedAt?.ToString("MMM dd, yyyy")</td>
                                    </tr>
                                </table>
                            </div>

                            <div class="col-md-6">
                                <h6 class="text-muted mb-2">Timeline</h6>
                                <table class="table table-sm">
                                    <tr>
                                        <td class="fw-semibold">Start Date:</td>
                                        <td>@(task.StartDate?.ToString("MMM dd, yyyy") ?? "Not set")</td>
                                    </tr>
                                    <tr>
                                        <td class="fw-semibold">Due Date:</td>
                                        <td class="@(IsTaskOverdue(task) ? "text-danger fw-semibold" : "")">
                                            @(task.DueDate?.ToString("MMM dd, yyyy") ?? "Not set")
                                            @if (IsTaskOverdue(task))
                                            {
                                                <span class="badge bg-danger ms-1">Overdue</span>
                                            }
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="fw-semibold">Completed:</td>
                                        <td>@(task.CompletedDate?.ToString("MMM dd, yyyy") ?? "-")</td>
                                    </tr>
                                    <tr>
                                        <td class="fw-semibold">Last Updated:</td>
                                        <td>@task.UpdatedAt?.ToString("MMM dd, yyyy")</td>
                                    </tr>
                                </table>
                            </div>
                        </div>

                        <div class="mb-4">
                            <h6 class="text-muted mb-2">Time Tracking</h6>
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="border rounded p-3 text-center">
                                        <div class="h4 mb-1">@(task.EstimatedHours?.ToString() ?? "-")</div>
                                        <small class="text-muted">Estimated Hours</small>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="border rounded p-3 text-center">
                                        <div class="h4 mb-1">@task.ActualHours</div>
                                        <small class="text-muted">Actual Hours</small>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="border rounded p-3 text-center">
                                        <div class="h4 mb-1">
                                            @if (task.EstimatedHours.HasValue && task.EstimatedHours.Value > 0)
                                            {
                                                @($"{Math.Round((double)task.ActualHours / (double)task.EstimatedHours.Value * 100, 0)}%")
                                            }
                                            else
                                            {
                                                <span>-</span>
                                            }
                                        </div>
                                        <small class="text-muted">Progress</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Task History -->
                @if (task.History.Any())
                {
                    <div class="card mt-4">
                        <div class="card-header">
                            <h5 class="mb-0">Task History</h5>
                        </div>
                        <div class="card-body">
                            <div class="timeline">
                                @foreach (var history in task.History.OrderByDescending(h => h.ChangedAt))
                                {
                                    <div class="timeline-item mb-3">
                                        <div class="d-flex">
                                            <div class="flex-shrink-0">
                                                <div class="timeline-marker"></div>
                                            </div>
                                            <div class="flex-grow-1 ms-3">
                                                <div class="d-flex justify-content-between">
                                                    <strong>@history.FieldName Changed</strong>
                                                    <small class="text-muted">
                                                        @history.ChangedAt.ToString("MMM dd, yyyy HH:mm")
                                                    </small>
                                                </div>
                                                <p class="mb-0">
                                                    <small>
                                                        @if (!string.IsNullOrEmpty(history.OldValue))
                                                        {
                                                            <span class="text-muted">From: <del>@history.OldValue</del></span>
                                                        }
                                                        @if (!string.IsNullOrEmpty(history.NewValue))
                                                        {
                                                            <span class="text-success ms-2">To: @history.NewValue</span>
                                                        }
                                                    </small>
                                                </p>
                                                @if (!string.IsNullOrEmpty(history.Comment))
                                                {
                                                    <p class="mb-0 mt-1">
                                                        <small class="text-muted">💬 @history.Comment</small>
                                                    </p>
                                                }
                                                <small class="text-muted">By: @history.ChangedBy?.FullName</small>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>

            <div class="col-lg-4">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Update Task Status</h5>
                    </div>
                    <div class="card-body">
                        @if (!string.IsNullOrEmpty(errorMessage))
                        {
                            <div class="alert alert-danger">@errorMessage</div>
                        }

                        <EditForm Model="updateModel" OnValidSubmit="UpdateTaskStatus">
                            <DataAnnotationsValidator />

                            <div class="mb-3">
                                <label class="form-label">Status</label>
                                <InputSelect class="form-select" @bind-Value="updateModel.Status">
                                    <option value="Assigned">Assigned</option>
                                    <option value="InProgress">In Progress</option>
                                    <option value="Completed">Completed</option>
                                </InputSelect>
                                <ValidationMessage For="@(() => updateModel.Status)" />
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Hours Worked</label>
                                <InputNumber class="form-control" @bind-Value="updateModel.ActualHours" step="0.5" />
                                <small class="text-muted">Enter the hours you've worked on this task</small>
                                <ValidationMessage For="@(() => updateModel.ActualHours)" />
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Comment (Optional)</label>
                                <InputTextArea class="form-control" rows="3" @bind-Value="updateModel.Comment" 
                                               placeholder="Add any notes about your progress..." />
                            </div>

                            <button type="submit" class="btn btn-primary w-100" disabled="@isUpdating">
                                @if (isUpdating)
                                {
                                    <span class="spinner-border spinner-border-sm me-2"></span>
                                }
                                Update Status
                            </button>
                        </EditForm>
                    </div>
                </div>

                <div class="card mt-4">
                    <div class="card-header">
                        <h5 class="mb-0">Quick Actions</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            <button class="btn btn-outline-success" 
                                    @onclick='() => QuickStatusUpdate("InProgress")'
                                    disabled=@(task.Status == "InProgress" || isUpdating)'>
                                Start Working
                            </button>
                            <button class="btn btn-outline-primary" 
                                    @onclick='() => QuickStatusUpdate("Completed")'
                                    disabled='@(task.Status == "Completed" || isUpdating)'>
                                Mark as Completed
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning">
            Task not found or you don't have permission to view it.
        </div>
    }
</div>

<style>
    .timeline-marker {
        width: 12px;
        height: 12px;
        background-color: var(--primary-color);
        border-radius: 50%;
        margin-top: 4px;
    }

    .timeline-item:not(:last-child) .timeline-marker::after {
        content: '';
        position: absolute;
        width: 2px;
        height: 100%;
        background-color: #e5e7eb;
        left: 5px;
        top: 12px;
    }
</style>

@code {
    [Parameter]
    public int TaskId { get; set; }

    private TaskDto? task;
    private UpdateTaskStatusDto updateModel = new();
    private bool isLoading = true;
    private bool isUpdating = false;
    private string successMessage = string.Empty;
    private string errorMessage = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        await LoadTask();
    }

    private async Task LoadTask()
    {
        isLoading = true;
        try
        {
            task = await ApiService.GetTaskAsync(TaskId);
            if (task != null)
            {
                updateModel = new UpdateTaskStatusDto
                {
                    Status = task.Status,
                    ActualHours = task.ActualHours
                };
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading task: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task UpdateTaskStatus()
    {
        isUpdating = true;
        successMessage = string.Empty;
        errorMessage = string.Empty;

        try
        {
            var result = await ApiService.UpdateTaskStatusAsync(TaskId, updateModel);
            if (result != null)
            {
                successMessage = "Task status updated successfully!";
                await LoadTask(); // Reload to get updated data
            }
            else
            {
                errorMessage = "Failed to update task status. Please try again.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error: {ex.Message}";
        }
        finally
        {
            isUpdating = false;
        }
    }

    private async Task QuickStatusUpdate(string status)
    {
        updateModel.Status = status;
        await UpdateTaskStatus();
    }

    private void GoBack()
    {
        Navigation.NavigateTo("/user/tasks");
    }

    private bool IsTaskOverdue(TaskDto task)
    {
        return task.DueDate.HasValue && 
               task.DueDate.Value < DateTime.Today &&
               task.Status != "Completed" && 
               task.Status != "Tested" && 
               task.Status != "Closed";
    }

    private string GetStatusClass(string status)
    {
        return status switch
        {
            "NotAssigned" => "status-not-assigned",
            "Assigned" => "status-assigned",
            "InProgress" => "status-in-progress",
            "Completed" => "status-completed",
            "Tested" => "status-tested",
            "Closed" => "status-closed",
            _ => "bg-secondary"
        };
    }

    private string GetPriorityClass(string priority)
    {
        return priority switch
        {
            "Low" => "priority-low",
            "Medium" => "priority-medium",
            "High" => "priority-high",
            "Critical" => "priority-critical",
            _ => "bg-secondary"
        };
    }

    private string FormatStatus(string status)
    {
        return status switch
        {
            "NotAssigned" => "Not Assigned",
            "InProgress" => "In Progress",
            _ => status
        };
    }
}