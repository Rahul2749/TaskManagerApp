@* TaskManager.Client/Pages/User/MyTasks.razor *@
@page "/user/tasks"
@attribute [Authorize(Roles = "User")]
@inject IApiService ApiService
@inject NavigationManager Navigation
@rendermode @(new InteractiveWebAssemblyRenderMode(prerender: false))

<PageTitle>My Tasks</PageTitle>

<div class="page-container">
    <!-- Filters -->
    <div class="filters-card">
        <div class="filters-grid">
            <div class="form-group">
                <label class="form-label">Status</label>
                <select class="form-control" @onchange="OnStatusFilterChange">
                    <option value="">All Status</option>
                    <option value="Assigned">Assigned</option>
                    <option value="InProgress">In Progress</option>
                    <option value="Completed">Completed</option>
                    <option value="Tested">Tested</option>
                    <option value="Closed">Closed</option>
                </select>
            </div>
            <div class="form-group">
                <label class="form-label">Priority</label>
                <select class="form-control" @onchange="OnPriorityFilterChange">
                    <option value="">All Priorities</option>
                    <option value="Low">Low</option>
                    <option value="Medium">Medium</option>
                    <option value="High">High</option>
                    <option value="Critical">Critical</option>
                </select>
            </div>
            <div class="form-group filter-button">
                <label class="form-label">&nbsp;</label>
                <button class="btn btn-secondary btn-full" @onclick="ClearFilters">
                    Clear Filters
                </button>
            </div>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="loading-state">
            <div class="spinner"></div>
            <p>Loading tasks...</p>
        </div>
    }
    else
    {
        @if (filteredTasks.Any())
        {
            <div class="tasks-grid">
                @foreach (var task in filteredTasks)
                {
                    <div class="task-card @(IsTaskOverdue(task) ? "border-danger" : "")">
                        <div class="task-card-header">
                            <span class="badge @GetPriorityClass(task.Priority)">
                                @task.Priority
                            </span>
                            <span class="badge @GetStatusClass(task.Status)">
                                @FormatStatus(task.Status)
                            </span>
                        </div>

                        <h4 class="task-card-title">@task.Title</h4>
                        <div class="task-card-meta">
                            <strong>Project:</strong> @task.ProjectName
                        </div>

                        @if (!string.IsNullOrEmpty(task.Description))
                        {
                            <p class="task-card-description">
                                @(task.Description.Length > 100 ? task.Description.Substring(0, 100) + "..." : task.Description)
                            </p>
                        }

                        <div class="task-progress">
                            <div class="progress-header">
                                <span>Time Logged</span>
                                <span>@task.ActualHours / @(task.EstimatedHours?.ToString() ?? "-") hrs</span>
                            </div>
                            @if (task.EstimatedHours.HasValue && task.EstimatedHours.Value > 0)
                            {
                                var progress = Math.Min((double)task.ActualHours / (double)task.EstimatedHours.Value * 100, 100);
                                <div class="progress">
                                    <div class="progress-bar @(progress > 100 ? "bg-danger" : "")" style="width: @progress%"></div>
                                </div>
                            }
                        </div>

                        @if (task.DueDate.HasValue)
                        {
                            <div class="task-due @(IsTaskOverdue(task) ? "text-danger" : "")">
                                <strong>Due:</strong> @task.DueDate.Value.ToString("MMM dd, yyyy")
                                @if (IsTaskOverdue(task))
                                {
                                    <span class="badge badge-danger">Overdue</span>
                                }
                            </div>
                        }

                        <button class="btn btn-primary btn-full" @onclick="() => ViewTaskDetails(task.Id!.Value)">
                            View Details
                        </button>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="empty-state">
                <div class="empty-icon">📋</div>
                <h3>No Tasks Found</h3>
                <p>You don't have any tasks matching the selected filters.</p>
                <button class="btn btn-secondary" @onclick="ClearFilters">
                    Clear Filters
                </button>
            </div>
        }
    }
</div>

