@* TaskManager.Client/Pages/Admin/Reports.razor *@
@page "/admin/reports"
@attribute [Authorize(Roles = "Admin")]
@inject IApiService ApiService
@rendermode @(new InteractiveWebAssemblyRenderMode(prerender: false))

<PageTitle>System Reports</PageTitle>

<div class="app-main">
    <div class="page-container">
        <div class="page-subtitle-section">
            <div class="page-subtitle">View comprehensive system analytics and reports</div>
        </div>

        @if (isLoading)
        {
            <div class="loading-state">
                <div class="spinner"></div>
                <p>Loading reports...</p>
            </div>
        }
        else if (dashboardData != null)
        {
            <!-- Overall Statistics -->
            <div class="stats-section">
                <div class="stats-grid">
                    <div class="stat-box">
                        <div class="stat-number text-primary">@dashboardData.TotalProjects</div>
                        <div class="stat-title">Total Projects</div>
                        <div class="stat-badge badge-success">@dashboardData.ActiveProjects Active</div>
                    </div>

                    <div class="stat-box">
                        <div class="stat-number text-info">@dashboardData.TotalTasks</div>
                        <div class="stat-title">Total Tasks</div>
                        <div class="stat-badge badge-warning">@dashboardData.InProgressTasks In Progress</div>
                    </div>

                    <div class="stat-box">
                        <div class="stat-number text-success">@dashboardData.CompletedTasks</div>
                        <div class="stat-title">Completed Tasks</div>
                        <div class="stat-badge badge-neutral">
                            @(dashboardData.TotalTasks > 0 ?
                                                    Math.Round((double)dashboardData.CompletedTasks / dashboardData.TotalTasks * 100, 1) : 0)% Complete
                    </div>
                </div>

                    <div class="stat-box">
                        <div class="stat-number text-warning">@dashboardData.TotalUsers</div>
                        <div class="stat-title">Total Users</div>
                        <div class="stat-badge badge-success">@dashboardData.ActiveUsers Active</div>
                    </div>
                </div>
            </div>

            <!-- Main Content -->
            <div class="reports-grid">
                <!-- Project Performance -->
                <div class="report-card large-card">
                    <div class="card-header">
                        <h3 class="card-title">Project Performance</h3>
                    </div>
                    <div class="card-body">
                    @if (dashboardData.ProjectSummaries.Any())
                        {
                            <div class="table-responsive">
                                <table class="data-table">
                                    <thead>
                                        <tr>
                                            <th>Project</th>
                                            <th class="text-center">Tasks</th>
                                            <th class="text-center">Completed</th>
                                            <th class="text-center">In Progress</th>
                                            <th>Completion Rate</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var project in dashboardData.ProjectSummaries.OrderByDescending(p => p.CompletionPercentage))
                                        {
                                            <tr>
                                                <td class="project-name-cell">@project.ProjectName</td>
                                                <td class="text-center">@project.TotalTasks</td>
                                                <td class="text-center">
                                                    <span class="badge badge-success">@project.CompletedTasks</span>
                                                </td>
                                                <td class="text-center">
                                                    <span class="badge badge-warning">@project.InProgressTasks</span>
                                                </td>
                                                <td>
                                                    <div class="progress-cell">
                                                        <div class="progress">
                                                            <div class="progress-bar" style="width: @(project.CompletionPercentage)%"></div>
                                                        </div>
                                                        <span class="progress-label">@project.CompletionPercentage%</span>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <div class="empty-state-inline">
                                <p>No project data available</p>
                            </div>
                        }
                    </div>
                </div>

                <!-- Task Status Distribution -->
                <div class="report-card">
                    <div class="card-header">
                        <h3 class="card-title">Task Status Distribution</h3>
                    </div>
                    <div class="card-body">
                        <div class="status-distribution">
                            <div class="distribution-item">
                                <div class="distribution-header">
                                    <span class="distribution-label">Completed</span>
                                    <span class="distribution-value text-success">@dashboardData.CompletedTasks</span>
                                </div>
                                <div class="progress">
                                    <div class="progress-bar bg-success" style="width: @GetPercentage(dashboardData.CompletedTasks, dashboardData.TotalTasks)%"></div>
                                </div>
                            </div>

                            <div class="distribution-item">
                                <div class="distribution-header">
                                    <span class="distribution-label">In Progress</span>
                                    <span class="distribution-value text-warning">@dashboardData.InProgressTasks</span>
                                </div>
                                <div class="progress">
                                    <div class="progress-bar bg-warning" style="width: @GetPercentage(dashboardData.InProgressTasks, dashboardData.TotalTasks)%"></div>
                                </div>
                            </div>

                            <div class="distribution-item">
                                <div class="distribution-header">
                                    <span class="distribution-label">Overdue</span>
                                    <span class="distribution-value text-danger">@dashboardData.OverdueTasks</span>
                                </div>
                                <div class="progress">
                                    <div class="progress-bar bg-danger" style="width: @GetPercentage(dashboardData.OverdueTasks, dashboardData.TotalTasks)%"></div>
                                </div>
                            </div>

                            <div class="distribution-item">
                                <div class="distribution-header">
                                    <span class="distribution-label">Other</span>
                                    <span class="distribution-value text-muted">
                                        @(dashboardData.TotalTasks - dashboardData.CompletedTasks - dashboardData.InProgressTasks - dashboardData.OverdueTasks)
                                    </span>
                                </div>
                                <div class="progress">
                                    <div class="progress-bar bg-secondary" style="width: @GetPercentage(dashboardData.TotalTasks - dashboardData.CompletedTasks - dashboardData.InProgressTasks - dashboardData.OverdueTasks, dashboardData.TotalTasks)%"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Upcoming Deadlines -->
            @if (dashboardData.UpcomingDeadlines.Any())
            {
                <div class="report-card full-width">
                    <div class="card-header">
                        <h3 class="card-title">Upcoming Deadlines (Next 10)</h3>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="data-table">
                                <thead>
                                    <tr>
                                        <th>Task</th>
                                        <th>Project</th>
                                        <th>Assigned To</th>
                                        <th>Due Date</th>
                                        <th>Priority</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var task in dashboardData.UpcomingDeadlines)
                                    {
                                        <tr>
                                            <td class="task-title-cell">@task.Title</td>
                                            <td>@task.ProjectName</td>
                                            <td>@task.AssignedTo?.FullName</td>
                                            <td>
                                                @if (task.DueDate.HasValue)
                                                {
                                                    var daysUntilDue = (task.DueDate.Value - DateTime.Today).Days;
                                                    <div class="due-date-cell">
                                                        <span class="@(daysUntilDue <= 3 ? "text-danger" : "")">
                                                            @task.DueDate.Value.ToString("MMM dd, yyyy")
                                                        </span>
                                                        @if (daysUntilDue == 0)
                                                        {
                                                            <span class="badge badge-danger">Today</span>
                                                        }
                                                        else if (daysUntilDue == 1)
                                                        {
                                                            <span class="badge badge-warning">Tomorrow</span>
                                                        }
                                                    </div>
                                                }
                                            </td>
                                            <td>
                                                <span class="badge @GetPriorityClass(task.Priority)">
                                                    @task.Priority
                                                </span>
                                            </td>
                                            <td>
                                                <span class="badge @GetStatusClass(task.Status)">
                                                    @FormatStatus(task.Status)
                                                </span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>

<style>
    .app-main {
        margin-left: 250px;
        min-height: 100vh;
        background: var(--bg-main);
        transition: margin-left 0.3s ease;
    }

    .page-container {
        padding: 0 var(--space-xl) var(--space-xl);
        max-width: 1600px;
        margin: 0 auto;
    }

    .page-subtitle-section {
        margin-bottom: var(--space-xl);
    }

    .page-subtitle {
        color: var(--text-secondary);
        font-size: 0.95rem;
    }

    /* STATS SECTION */
    .stats-section {
        background: var(--bg-card);
        border-radius: var(--radius-card);
        padding: var(--space-xl);
        box-shadow: var(--shadow-card);
        border: 1px solid var(--border-light);
        margin-bottom: var(--space-xl);
    }

    .stats-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: var(--space-xl);
    }

    .stat-box {
        text-align: center;
    }

    .stat-number {
        font-size: 2.5rem;
        font-weight: 700;
        line-height: 1;
        margin-bottom: 8px;
    }

    .stat-title {
        font-size: 0.875rem;
        color: var(--text-secondary);
        margin-bottom: 8px;
    }

    .stat-badge {
        display: inline-block;
        padding: 4px 12px;
        border-radius: 16px;
        font-size: 0.75rem;
        font-weight: 600;
    }

    .text-primary {
        color: var(--accent-purple);
    }

    .text-info {
        color: #3B82F6;
    }

    .text-success {
        color: #059669;
    }

    .text-warning {
        color: #D97706;
    }

    .text-danger {
        color: #DC2626;
        font-weight: 600;
    }

    .text-muted {
        color: var(--text-muted);
    }

    .badge-success {
        background: rgba(34, 197, 94, 0.1);
        color: #059669;
    }

    .badge-warning {
        background: rgba(251, 191, 36, 0.1);
        color: #D97706;
    }

    .badge-danger {
        background: rgba(239, 68, 68, 0.1);
        color: #DC2626;
    }

    .badge-neutral {
        background: var(--bg-main);
        color: var(--text-secondary);
    }

    /* REPORTS GRID */
    .reports-grid {
        display: grid;
        grid-template-columns: 2fr 1fr;
        gap: var(--space-lg);
        margin-bottom: var(--space-xl);
    }

    .report-card {
        background: var(--bg-card);
        border-radius: var(--radius-card);
        box-shadow: var(--shadow-card);
        border: 1px solid var(--border-light);
        overflow: hidden;
    }

        .report-card.full-width {
            grid-column: 1 / -1;
        }

    .card-header {
        padding: var(--space-lg);
        border-bottom: 1px solid var(--border-light);
    }

    .card-title {
        font-size: 1.125rem;
        font-weight: 700;
        color: var(--text-primary);
        margin: 0;
    }

    .card-body {
        padding: var(--space-lg);
    }

    /* STATUS DISTRIBUTION */
    .status-distribution {
        display: flex;
        flex-direction: column;
        gap: var(--space-lg);
    }

    .distribution-item {
    }

    .distribution-header {
        display: flex;
        justify-content: space-between;
        margin-bottom: 8px;
    }

    .distribution-label {
        font-size: 0.875rem;
        color: var(--text-primary);
        font-weight: 500;
    }

    .distribution-value {
        font-size: 0.875rem;
        font-weight: 700;
    }

    /* TABLE */
    .table-responsive {
        overflow-x: auto;
    }

    .data-table {
        width: 100%;
        border-collapse: collapse;
    }

        .data-table thead th {
            padding: 12px 16px;
            text-align: left;
            font-size: 0.75rem;
            font-weight: 700;
            color: var(--text-secondary);
            text-transform: uppercase;
            letter-spacing: 0.5px;
            border-bottom: 2px solid var(--border-light);
        }

        .data-table tbody td {
            padding: 16px;
            border-bottom: 1px solid var(--border-light);
            font-size: 0.875rem;
            color: var(--text-primary);
        }

        .data-table tbody tr:hover {
            background: var(--bg-main);
        }

        .data-table tbody tr:last-child td {
            border-bottom: none;
        }

    .project-name-cell,
    .task-title-cell {
        font-weight: 600;
    }

    .text-center {
        text-align: center;
    }

    .progress-cell {
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .progress {
        flex: 1;
        height: 8px;
        background: var(--border-light);
        border-radius: 10px;
        overflow: hidden;
    }

    .progress-bar {
        height: 100%;
        background: var(--accent-purple);
        border-radius: 10px;
        transition: width 0.3s;
    }

        .progress-bar.bg-success {
            background: #059669;
        }

        .progress-bar.bg-warning {
            background: #F59E0B;
        }

        .progress-bar.bg-danger {
            background: #DC2626;
        }

        .progress-bar.bg-secondary {
            background: #6B7280;
        }

    .progress-label {
        font-size: 0.75rem;
        color: var(--text-muted);
        font-weight: 600;
        min-width: 40px;
        text-align: right;
    }

    .due-date-cell {
        display: flex;
        align-items: center;
        gap: 8px;
        flex-wrap: wrap;
    }

    /* BADGES */
    .badge {
        padding: 4px 10px;
        border-radius: 12px;
        font-size: 0.7rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.3px;
        white-space: nowrap;
    }

        .badge.status-not-assigned {
            background: rgba(163, 174, 208, 0.1);
            color: var(--text-secondary);
        }

        .badge.status-assigned {
            background: rgba(59, 130, 246, 0.1);
            color: #2563EB;
        }

        .badge.status-in-progress {
            background: rgba(251, 191, 36, 0.1);
            color: #D97706;
        }

        .badge.status-completed {
            background: rgba(34, 197, 94, 0.1);
            color: #059669;
        }

        .badge.status-tested {
            background: rgba(139, 92, 246, 0.1);
            color: #7C3AED;
        }

        .badge.status-closed {
            background: rgba(107, 114, 128, 0.1);
            color: #4B5563;
        }

        .badge.priority-low {
            background: rgba(34, 197, 94, 0.1);
            color: #059669;
        }

        .badge.priority-medium {
            background: rgba(251, 191, 36, 0.1);
            color: #D97706;
        }

        .badge.priority-high {
            background: rgba(249, 115, 22, 0.1);
            color: #EA580C;
        }

        .badge.priority-critical {
            background: rgba(239, 68, 68, 0.1);
            color: #DC2626;
        }

    .empty-state-inline {
        text-align: center;
        padding: var(--space-xl) var(--space-lg);
    }

        .empty-state-inline p {
            color: var(--text-secondary);
            margin: 0;
        }

    .loading-state {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        min-height: 400px;
        gap: var(--space-md);
    }

        .loading-state p {
            color: var(--text-secondary);
            font-size: 0.95rem;
        }

    /* RESPONSIVE */
    @@media (max-width: 1400px) {
        .stats-grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    @@media (max-width: 1024px) {
        .app-main {
            margin-left: 0;
        }

        .page-container {
            padding: 0 var(--space-md) var(--space-md);
        }

        .reports-grid {
            grid-template-columns: 1fr;
            gap: var(--space-md);
        }
    }

    @@media (max-width: 768px) {
        .stats-grid {
            grid-template-columns: 1fr;
            gap: var(--space-md);
        }

        .stats-section {
            padding: var(--space-lg);
        }

        .stat-number {
            font-size: 2rem;
        }
    }

    @@media (max-width: 480px) {
        .page-container {
            padding: 0 var(--space-sm) var(--space-sm);
        }

        .stats-section {
            padding: var(--space-md);
        }

        .report-card .card-header,
        .report-card .card-body {
            padding: var(--space-md);
        }

        .data-table thead th,
        .data-table tbody td {
            padding: 12px 8px;
            font-size: 0.8125rem;
        }
    }
</style>

@code {
    private DashboardDto? dashboardData;
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadReportData();
    }

    private async Task LoadReportData()
    {
        isLoading = true;
        try
        {
            dashboardData = await ApiService.GetDashboardDataAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading reports: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private double GetPercentage(int value, int total)
    {
        return total > 0 ? Math.Round((double)value / total * 100, 1) : 0;
    }

    private string GetStatusClass(string status)
    {
        return status switch
        {
            "NotAssigned" => "status-not-assigned",
            "Assigned" => "status-assigned",
            "InProgress" => "status-in-progress",
            "Completed" => "status-completed",
            "Tested" => "status-tested",
            "Closed" => "status-closed",
            _ => "bg-secondary"
        };
    }

    private string GetPriorityClass(string priority)
    {
        return priority switch
        {
            "Low" => "priority-low",
            "Medium" => "priority-medium",
            "High" => "priority-high",
            "Critical" => "priority-critical",
            _ => "bg-secondary"
        };
    }

    private string FormatStatus(string status)
    {
        return status switch
        {
            "NotAssigned" => "Not Assigned",
            "InProgress" => "In Progress",
            _ => status
        };
    }
}