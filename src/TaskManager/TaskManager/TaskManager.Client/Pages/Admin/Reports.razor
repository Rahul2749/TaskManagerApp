@* TaskManager.Client/Pages/Admin/Reports.razor *@
@page "/admin/reports"
@attribute [Authorize(Roles = "Admin")]
@inject IApiService ApiService
@rendermode @(new InteractiveWebAssemblyRenderMode(prerender: false))

<PageTitle>System Reports</PageTitle>

<div class="page-container">
    <div class="page-subtitle-section">
            <div class="page-subtitle">View comprehensive system analytics and reports</div>
        </div>

        @if (isLoading)
        {
            <div class="loading-state">
                <div class="spinner"></div>
                <p>Loading reports...</p>
            </div>
        }
        else if (dashboardData != null)
        {
            <!-- Overall Statistics -->
            <div class="stats-section">
                <div class="stats-grid">
                    <div class="stat-box">
                        <div class="stat-number text-primary">@dashboardData.TotalProjects</div>
                        <div class="stat-title">Total Projects</div>
                        <div class="stat-badge badge-success">@dashboardData.ActiveProjects Active</div>
                    </div>

                    <div class="stat-box">
                        <div class="stat-number text-info">@dashboardData.TotalTasks</div>
                        <div class="stat-title">Total Tasks</div>
                        <div class="stat-badge badge-warning">@dashboardData.InProgressTasks In Progress</div>
                    </div>

                    <div class="stat-box">
                        <div class="stat-number text-success">@dashboardData.CompletedTasks</div>
                        <div class="stat-title">Completed Tasks</div>
                        <div class="stat-badge badge-neutral">
                            @(dashboardData.TotalTasks > 0 ? 
                                Math.Round((double)dashboardData.CompletedTasks / dashboardData.TotalTasks * 100, 1) : 0)% Complete
                        </div>
                    </div>

                    <div class="stat-box">
                        <div class="stat-number text-warning">@dashboardData.TotalUsers</div>
                        <div class="stat-title">Total Users</div>
                        <div class="stat-badge badge-success">@dashboardData.ActiveUsers Active</div>
                    </div>
                </div>
            </div>

            <!-- Main Content -->
            <div class="reports-grid">
                <!-- Project Performance -->
                <div class="report-card large-card">
                    <div class="card-header">
                        <h3 class="card-title">Project Performance</h3>
                    </div>
                    <div class="card-body">
                        @if (dashboardData.ProjectSummaries.Any())
                        {
                            <div class="table-responsive">
                                <table class="data-table">
                                    <thead>
                                        <tr>
                                            <th>Project</th>
                                            <th class="text-center">Tasks</th>
                                            <th class="text-center">Completed</th>
                                            <th class="text-center">In Progress</th>
                                            <th>Completion Rate</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var project in dashboardData.ProjectSummaries.OrderByDescending(p => p.CompletionPercentage))
                                        {
                                            <tr>
                                                <td class="project-name-cell">@project.ProjectName</td>
                                                <td class="text-center">@project.TotalTasks</td>
                                                <td class="text-center">
                                                    <span class="badge badge-success">@project.CompletedTasks</span>
                                                </td>
                                                <td class="text-center">
                                                    <span class="badge badge-warning">@project.InProgressTasks</span>
                                                </td>
                                                <td>
                                                    <div class="progress-cell">
                                                        <div class="progress">
                                                            <div class="progress-bar" style="width: @(project.CompletionPercentage)%"></div>
                                                        </div>
                                                        <span class="progress-label">@project.CompletionPercentage%</span>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <div class="empty-state-inline">
                                <p>No project data available</p>
                            </div>
                        }
                    </div>
                </div>

                <!-- Task Status Distribution -->
                <div class="report-card">
                    <div class="card-header">
                        <h3 class="card-title">Task Status Distribution</h3>
                    </div>
                    <div class="card-body">
                        <div class="status-distribution">
                            <div class="distribution-item">
                                <div class="distribution-header">
                                    <span class="distribution-label">Completed</span>
                                    <span class="distribution-value text-success">@dashboardData.CompletedTasks</span>
                                </div>
                                <div class="progress">
                                    <div class="progress-bar bg-success" style="width: @GetPercentage(dashboardData.CompletedTasks, dashboardData.TotalTasks)%"></div>
                                </div>
                            </div>

                            <div class="distribution-item">
                                <div class="distribution-header">
                                    <span class="distribution-label">In Progress</span>
                                    <span class="distribution-value text-warning">@dashboardData.InProgressTasks</span>
                                </div>
                                <div class="progress">
                                    <div class="progress-bar bg-warning" style="width: @GetPercentage(dashboardData.InProgressTasks, dashboardData.TotalTasks)%"></div>
                                </div>
                            </div>

                            <div class="distribution-item">
                                <div class="distribution-header">
                                    <span class="distribution-label">Overdue</span>
                                    <span class="distribution-value text-danger">@dashboardData.OverdueTasks</span>
                                </div>
                                <div class="progress">
                                    <div class="progress-bar bg-danger" style="width: @GetPercentage(dashboardData.OverdueTasks, dashboardData.TotalTasks)%"></div>
                                </div>
                            </div>

                            <div class="distribution-item">
                                <div class="distribution-header">
                                    <span class="distribution-label">Other</span>
                                    <span class="distribution-value text-muted">
                                        @(dashboardData.TotalTasks - dashboardData.CompletedTasks - dashboardData.InProgressTasks - dashboardData.OverdueTasks)
                                    </span>
                                </div>
                                <div class="progress">
                                    <div class="progress-bar bg-secondary" style="width: @GetPercentage(dashboardData.TotalTasks - dashboardData.CompletedTasks - dashboardData.InProgressTasks - dashboardData.OverdueTasks, dashboardData.TotalTasks)%"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Upcoming Deadlines -->
            @if (dashboardData.UpcomingDeadlines.Any())
            {
                <div class="report-card full-width">
                    <div class="card-header">
                        <h3 class="card-title">Upcoming Deadlines (Next 10)</h3>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="data-table">
                                <thead>
                                    <tr>
                                        <th>Task</th>
                                        <th>Project</th>
                                        <th>Assigned To</th>
                                        <th>Due Date</th>
                                        <th>Priority</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var task in dashboardData.UpcomingDeadlines)
                                    {
                                        <tr>
                                            <td class="task-title-cell">@task.Title</td>
                                            <td>@task.ProjectName</td>
                                            <td>@task.AssignedTo?.FullName</td>
                                            <td>
                                                @if (task.DueDate.HasValue)
                                                {
                                                    var daysUntilDue = (task.DueDate.Value - DateTime.Today).Days;
                                                    <div class="due-date-cell">
                                                        <span class="@(daysUntilDue <= 3 ? "text-danger" : "")">
                                                            @task.DueDate.Value.ToString("MMM dd, yyyy")
                                                        </span>
                                                        @if (daysUntilDue == 0)
                                                        {
                                                            <span class="badge badge-danger">Today</span>
                                                        }
                                                        else if (daysUntilDue == 1)
                                                        {
                                                            <span class="badge badge-warning">Tomorrow</span>
                                                        }
                                                    </div>
                                                }
                                            </td>
                                            <td>
                                                <span class="badge @GetPriorityClass(task.Priority)">
                                                    @task.Priority
                                                </span>
                                            </td>
                                            <td>
                                                <span class="badge @GetStatusClass(task.Status)">
                                                    @FormatStatus(task.Status)
                                                </span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
        }
    </div>


@code {
    private DashboardDto? dashboardData;
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadReportData();
    }

    private async Task LoadReportData()
    {
        isLoading = true;
        try
        {
            dashboardData = await ApiService.GetDashboardDataAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading reports: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private double GetPercentage(int value, int total)
    {
        return total > 0 ? Math.Round((double)value / total * 100, 1) : 0;
    }

    private string GetStatusClass(string status)
    {
        return status switch
        {
            "NotAssigned" => "status-not-assigned",
            "Assigned" => "status-assigned",
            "InProgress" => "status-in-progress",
            "Completed" => "status-completed",
            "Tested" => "status-tested",
            "Closed" => "status-closed",
            _ => "bg-secondary"
        };
    }

    private string GetPriorityClass(string priority)
    {
        return priority switch
        {
            "Low" => "priority-low",
            "Medium" => "priority-medium",
            "High" => "priority-high",
            "Critical" => "priority-critical",
            _ => "bg-secondary"
        };
    }

    private string FormatStatus(string status)
    {
        return status switch
        {
            "NotAssigned" => "Not Assigned",
            "InProgress" => "In Progress",
            _ => status
        };
    }
}