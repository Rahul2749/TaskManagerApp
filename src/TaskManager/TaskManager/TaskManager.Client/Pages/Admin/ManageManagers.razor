@* TaskManager.Client/Pages/Admin/ManageManagers.razor *@
@page "/admin/managers"
@attribute [Authorize(Roles = "Admin")]
@inject IApiService ApiService
@inject IJSRuntime JSRuntime
@rendermode @(new InteractiveWebAssemblyRenderMode(prerender: false))

<PageTitle>Manage Managers</PageTitle>

<div class="page-container">
    <div class="page-actions">
        <div class="page-subtitle">Create and manage manager accounts</div>
        <button class="btn btn-primary" @onclick="OpenCreateDialog">
            <span>➕</span> New Manager
        </button>
    </div>

    @if (isLoading)
    {
        <div class="loading-state">
            <div class="spinner"></div>
            <p>Loading managers...</p>
        </div>
    }
    else
    {
        <div class="table-card">
            @if (managers.Any())
            {
                <div class="table-responsive">
                    <table class="data-table">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Username</th>
                                <th>Email</th>
                                <th>Status</th>
                                <th>Created Date</th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var manager in managers)
                            {
                                <tr>
                                    <td class="user-name-cell">
                                        <div class="user-info">
                                            <div class="avatar avatar-sm">@manager.FirstName?.Substring(0, 1)</div>
                                            <span>@manager.FullName</span>
                                        </div>
                                    </td>
                                    <td>@manager.Username</td>
                                    <td>@manager.Email</td>
                                    <td>
                                        @if (manager.IsActive)
                                        {
                                            <span class="badge badge-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-secondary">Inactive</span>
                                        }
                                    </td>
                                    <td>@manager.CreatedAt.ToString("MMM dd, yyyy")</td>
                                    <td class="text-end">
                                        <div class="action-buttons">
                                            <button class="btn-icon" @onclick="() => OpenEditDialog(manager)" title="Edit">
                                                ✏️
                                            </button>
                                            <button class="btn-icon" @onclick="() => DeleteManager(manager.Id)" title="Delete">
                                                🗑️
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="empty-state-inline">
                    <p>No managers found. Create your first manager!</p>
                </div>
            }
        </div>
    }
</div>

@if (showDialog)
{
    <div class="modal-backdrop" @onclick="HandleBackdropClick"></div>
    <div class="modal-container">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title">@(isEditMode ? "Edit Manager" : "Create Manager")</h3>
                <button type="button" class="modal-close" @onclick="CloseDialog">✕</button>
            </div>

            <EditForm Model="managerModel" OnValidSubmit="SaveManager">
                <DataAnnotationsValidator />
                <div class="modal-body">
                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="alert alert-error">
                            <span class="alert-icon">⚠️</span>
                            <span class="alert-text">@errorMessage</span>
                        </div>
                    }

                    <div class="form-row">
                        <div class="form-group">
                            <label class="form-label">First Name</label>
                            <InputText class="form-control" @bind-Value="managerModel.FirstName" placeholder="Enter first name" />
                            <ValidationMessage For="@(() => managerModel.FirstName)" class="validation-message" />
                        </div>

                        <div class="form-group">
                            <label class="form-label">Last Name</label>
                            <InputText class="form-control" @bind-Value="managerModel.LastName" placeholder="Enter last name" />
                            <ValidationMessage For="@(() => managerModel.LastName)" class="validation-message" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Username</label>
                        <InputText class="form-control" @bind-Value="managerModel.Username" placeholder="Enter username" />
                        <ValidationMessage For="@(() => managerModel.Username)" class="validation-message" />
                    </div>

                    <div class="form-group">
                        <label class="form-label">Email</label>
                        <InputText type="email" class="form-control" @bind-Value="managerModel.Email" placeholder="Enter email address" />
                        <ValidationMessage For="@(() => managerModel.Email)" class="validation-message" />
                    </div>

                    <div class="form-group">
                        <label class="form-label">Password @(isEditMode ? "(leave blank to keep current)" : "")</label>
                        <InputText type="password" class="form-control" @bind-Value="managerModel.Password" placeholder="Enter password" />
                        <ValidationMessage For="@(() => managerModel.Password)" class="validation-message" />
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseDialog">Cancel</button>
                    <button type="submit" class="btn btn-primary" disabled="@isSaving">
                        @if (isSaving)
                        {
                            <span class="spinner-loading"></span>
                        }
                        <span>@(isEditMode ? "Update Manager" : "Create Manager")</span>
                    </button>
                </div>
            </EditForm>
        </div>
    </div>
}

@code {
    private List<UserDto> managers = new();
    private bool isLoading = true;
    private bool showDialog = false;
    private bool isEditMode = false;
    private bool isSaving = false;
    private string errorMessage = string.Empty;
    private RegisterDto managerModel = new();
    private int editingManagerId = 0;

    protected override async Task OnInitializedAsync()
    {
        await LoadManagers();
    }

    private async Task LoadManagers()
    {
        isLoading = true;
        try
        {
            managers = await ApiService.GetUsersAsync("Manager") ?? new();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading managers: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private void OpenCreateDialog()
    {
        isEditMode = false;
        managerModel = new RegisterDto { Role = "Manager" };
        errorMessage = string.Empty;
        showDialog = true;
    }

    private void OpenEditDialog(UserDto manager)
    {
        isEditMode = true;
        editingManagerId = manager.Id;
        managerModel = new RegisterDto
        {
            Username = manager.Username,
            Email = manager.Email,
            FirstName = manager.FirstName,
            LastName = manager.LastName,
            Role = "Manager",
            Password = string.Empty
        };
        errorMessage = string.Empty;
        showDialog = true;
    }

    private void CloseDialog()
    {
        showDialog = false;
        managerModel = new();
        errorMessage = string.Empty;
        StateHasChanged();
    }

    private void HandleBackdropClick()
    {
        // Optional: Close on backdrop click
        CloseDialog();
    }

    private async Task SaveManager()
    {
        isSaving = true;
        errorMessage = string.Empty;

        try
        {
            UserDto? result;

            if (isEditMode)
            {
                result = await ApiService.UpdateUserAsync(editingManagerId, managerModel);
            }
            else
            {
                result = await ApiService.CreateUserAsync(managerModel);
            }

            if (result != null)
            {
                await LoadManagers();
                CloseDialog();
            }
            else
            {
                errorMessage = "Failed to save manager. Username or email may already exist.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error: {ex.Message}";
        }
        finally
        {
            isSaving = false;
        }
    }

    private async Task DeleteManager(int managerId)
    {
        if (await JSRuntime.InvokeAsync<bool>("confirm", "Are you sure you want to delete this manager?"))
        {
            try
            {
                var success = await ApiService.DeleteUserAsync(managerId);
                if (success)
                {
                    await LoadManagers();
                }
            }
            catch (Exception ex)
            {
                Console.WriteLine($"Error deleting manager: {ex.Message}");
            }
        }
    }
}