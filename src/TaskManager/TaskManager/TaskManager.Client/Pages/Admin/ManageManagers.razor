@* TaskManager.Client/Pages/Admin/ManageManagers.razor *@
@page "/admin/managers"
@attribute [Authorize(Roles = "Admin")]
@inject IApiService ApiService
@inject IJSRuntime JSRuntime
@rendermode @(new InteractiveWebAssemblyRenderMode(prerender: false))

<PageTitle>Manage Managers</PageTitle>

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h2 class="fw-bold text-gradient">Manage Managers</h2>
            <p class="text-muted">Create and manage manager accounts</p>
        </div>
        <div class="col-auto">
            <button class="btn btn-primary" @onclick="OpenCreateDialog">
                <span>➕</span> New Manager
            </button>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="loading-container">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-body">
                @if (managers.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Username</th>
                                    <th>Email</th>
                                    <th>Status</th>
                                    <th>Created Date</th>
                                    <th class="text-end">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var manager in managers)
                                {
                                    <tr>
                                        <td class="fw-semibold">@manager.FullName</td>
                                        <td>@manager.Username</td>
                                        <td>@manager.Email</td>
                                        <td>
                                            @if (manager.IsActive)
                                            {
                                                <span class="badge bg-success">Active</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">Inactive</span>
                                            }
                                        </td>
                                        <td>@manager.CreatedAt.ToString("MMM dd, yyyy")</td>
                                        <td class="text-end">
                                            <button class="btn btn-sm btn-outline-primary me-1" @onclick="() => OpenEditDialog(manager)">
                                                Edit
                                            </button>
                                            <button class="btn btn-sm btn-outline-danger" @onclick="() => DeleteManager(manager.Id)">
                                                Delete
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p class="text-muted text-center py-5">No managers found. Create your first manager!</p>
                }
            </div>
        </div>
    }
</div>

@if (showDialog)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@(isEditMode ? "Edit Manager" : "Create Manager")</h5>
                    <button type="button" class="btn-close" @onclick="CloseDialog"></button>
                </div>
                <EditForm Model="managerModel" OnValidSubmit="SaveManager">
                    <DataAnnotationsValidator />
                    <div class="modal-body">
                        @if (!string.IsNullOrEmpty(errorMessage))
                        {
                            <div class="alert alert-danger">@errorMessage</div>
                        }

                        <div class="mb-3">
                            <label class="form-label">First Name</label>
                            <InputText class="form-control" @bind-Value="managerModel.FirstName" />
                            <ValidationMessage For="@(() => managerModel.FirstName)" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Last Name</label>
                            <InputText class="form-control" @bind-Value="managerModel.LastName" />
                            <ValidationMessage For="@(() => managerModel.LastName)" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Username</label>
                            <InputText class="form-control" @bind-Value="managerModel.Username" />
                            <ValidationMessage For="@(() => managerModel.Username)" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Email</label>
                            <InputText type="email" class="form-control" @bind-Value="managerModel.Email" />
                            <ValidationMessage For="@(() => managerModel.Email)" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Password @(isEditMode ? "(leave blank to keep current)" : "")</label>
                            <InputText type="password" class="form-control" @bind-Value="managerModel.Password" />
                            <ValidationMessage For="@(() => managerModel.Password)" />
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" @onclick="CloseDialog">Cancel</button>
                        <button type="submit" class="btn btn-primary" disabled="@isSaving">
                            @if (isSaving)
                            {
                                <span class="spinner-border spinner-border-sm me-2"></span>
                            }
                            @(isEditMode ? "Update" : "Create")
                        </button>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
}

@code {
    private List<UserDto> managers = new();
    private bool isLoading = true;
    private bool showDialog = false;
    private bool isEditMode = false;
    private bool isSaving = false;
    private string errorMessage = string.Empty;
    private RegisterDto managerModel = new();
    private int editingManagerId = 0;

    protected override async Task OnInitializedAsync()
    {
        await LoadManagers();
    }

    private async Task LoadManagers()
    {
        isLoading = true;
        try
        {
            managers = await ApiService.GetUsersAsync("Manager") ?? new();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading managers: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private void OpenCreateDialog()
    {
        isEditMode = false;
        managerModel = new RegisterDto { Role = "Manager" };
        errorMessage = string.Empty;
        showDialog = true;
    }

    private void OpenEditDialog(UserDto manager)
    {
        isEditMode = true;
        editingManagerId = manager.Id;
        managerModel = new RegisterDto
        {
            Username = manager.Username,
            Email = manager.Email,
            FirstName = manager.FirstName,
            LastName = manager.LastName,
            Role = "Manager",
            Password = string.Empty
        };
        errorMessage = string.Empty;
        showDialog = true;
    }

    private void CloseDialog()
    {
        showDialog = false;
        managerModel = new();
        errorMessage = string.Empty;
    }

    private async Task SaveManager()
    {
        isSaving = true;
        errorMessage = string.Empty;

        try
        {
            UserDto? result;
            
            if (isEditMode)
            {
                result = await ApiService.UpdateUserAsync(editingManagerId, managerModel);
            }
            else
            {
                result = await ApiService.CreateUserAsync(managerModel);
            }

            if (result != null)
            {
                await LoadManagers();
                CloseDialog();
            }
            else
            {
                errorMessage = "Failed to save manager. Username or email may already exist.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error: {ex.Message}";
        }
        finally
        {
            isSaving = false;
        }
    }

    private async Task DeleteManager(int managerId)
    {
        if (await JSRuntime.InvokeAsync<bool>("confirm", "Are you sure you want to delete this manager?"))
        {
            try
            {
                var success = await ApiService.DeleteUserAsync(managerId);
                if (success)
                {
                    await LoadManagers();
                }
            }
            catch (Exception ex)
            {
                Console.WriteLine($"Error deleting manager: {ex.Message}");
            }
        }
    }
}