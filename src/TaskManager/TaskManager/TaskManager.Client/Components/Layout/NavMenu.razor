@* Components/Layout/NavMenu.razor *@
@rendermode @(new InteractiveWebAssemblyRenderMode(prerender: false))
@inject IAuthServiceClient AuthService
@inject NavigationManager Navigation

<!-- Mobile Overlay -->
<div class="mobile-overlay @(isMobileSidebarOpen ? "active" : "")" @onclick="CloseMobileSidebar"></div>

<!-- Mobile Menu Button -->
<button class="mobile-menu-btn" @onclick="ToggleMobileSidebar" title="Menu">
    <span>☰</span>
</button>

<aside class="app-sidebar @(isSidebarCollapsed ? "collapsed" : "") @(isMobileSidebarOpen ? "mobile-open" : "")">
    <!-- Brand Logo -->
    <div class="sidebar-brand">
        <span class="brand-icon">📋</span>
        @if (!isSidebarCollapsed)
        {
            <span class="brand-text">TaskManager</span>
        }
    </div>

    <!-- Navigation Menu -->
    <nav class="sidebar-nav">
        <div class="nav-section">
            @if (!string.IsNullOrEmpty(currentUserRole) || string.IsNullOrEmpty(currentUserRole))
            {
                <div class="nav-menu">
                    @if (currentUserRole == "SuperAdmin" || currentUserRole == "Admin") //Added Admin
                    {
                        <NavLink class="nav-link" href="superadmin/dashboard" Match="NavLinkMatch.All" title="Dashboard" @onclick="CloseMobileSidebar">
                            <span class="nav-icon">🏠</span>
                            @if (!isSidebarCollapsed)
                            {
                                <span class="nav-text">Dashboard</span>
                            }
                        </NavLink>

                        <NavLink class="nav-link" href="superadmin/organizations" title="Organizations" @onclick="CloseMobileSidebar">
                            <span class="nav-icon">🏢</span>
                            @if (!isSidebarCollapsed)
                            {
                                <span class="nav-text">Organizations</span>
                            }
                        </NavLink>

                        <NavLink class="nav-link" href="superadmin/users" title="All Users" @onclick="CloseMobileSidebar">
                            <span class="nav-icon">👥</span>
                            @if (!isSidebarCollapsed)
                            {
                                <span class="nav-text">All Users</span>
                            }
                        </NavLink>

                        <NavLink class="nav-link" href="superadmin/reports" title="Reports" @onclick="CloseMobileSidebar">
                            <span class="nav-icon">📊</span>
                            @if (!isSidebarCollapsed)
                            {
                                <span class="nav-text">Reports</span>
                            }
                        </NavLink>
                    }
                    else if (currentUserRole == "OrganizationAdmin" || currentUserRole == "Admin")
                    {
                        <NavLink class="nav-link" href="admin/dashboard" Match="NavLinkMatch.All" title="Dashboard" @onclick="CloseMobileSidebar">
                            <span class="nav-icon">🏠</span>
                            @if (!isSidebarCollapsed)
                            {
                                <span class="nav-text">Dashboard</span>
                            }
                        </NavLink>

                        <NavLink class="nav-link" href="admin/projects" title="Projects" @onclick="CloseMobileSidebar">
                            <span class="nav-icon">📁</span>
                            @if (!isSidebarCollapsed)
                            {
                                <span class="nav-text">Projects</span>
                            }
                        </NavLink>

                        <NavLink class="nav-link" href="admin/tasks" title="Tasks" @onclick="CloseMobileSidebar">
                            <span class="nav-icon">✅</span>
                            @if (!isSidebarCollapsed)
                            {
                                <span class="nav-text">Tasks</span>
                            }
                        </NavLink>

                        <NavLink class="nav-link" href="admin/team" title="Team" @onclick="CloseMobileSidebar">
                            <span class="nav-icon">👥</span>
                            @if (!isSidebarCollapsed)
                            {
                                <span class="nav-text">Team</span>
                            }
                        </NavLink>

                        <NavLink class="nav-link" href="admin/reviews" title="Reviews" @onclick="CloseMobileSidebar">
                            <span class="nav-icon">⭐</span>
                            @if (!isSidebarCollapsed)
                            {
                                <span class="nav-text">Reviews</span>
                            }
                        </NavLink>
                    }
                    else if (currentUserRole == "Manager"|| currentUserRole == "Admin") //Added Admin
                    {
                        <NavLink class="nav-link" href="manager/dashboard" Match="NavLinkMatch.All" title="Dashboard" @onclick="CloseMobileSidebar">
                            <span class="nav-icon">🏠</span>
                            @if (!isSidebarCollapsed)
                            {
                                <span class="nav-text">Dashboard</span>
                            }
                        </NavLink>

                        <NavLink class="nav-link" href="manager/projects" title="Projects" @onclick="CloseMobileSidebar">
                            <span class="nav-icon">📁</span>
                            @if (!isSidebarCollapsed)
                            {
                                <span class="nav-text">Projects</span>
                            }
                        </NavLink>

                        <NavLink class="nav-link" href="manager/tasks" title="Tasks" @onclick="CloseMobileSidebar">
                            <span class="nav-icon">✅</span>
                            @if (!isSidebarCollapsed)
                            {
                                <span class="nav-text">Tasks</span>
                            }
                        </NavLink>

                        <NavLink class="nav-link" href="manager/team" title="Team" @onclick="CloseMobileSidebar">
                            <span class="nav-icon">👥</span>
                            @if (!isSidebarCollapsed)
                            {
                                <span class="nav-text">Team</span>
                            }
                        </NavLink>

                        <NavLink class="nav-link" href="manager/reviews" title="Reviews" @onclick="CloseMobileSidebar">
                            <span class="nav-icon">⭐</span>
                            @if (!isSidebarCollapsed)
                            {
                                <span class="nav-text">Reviews</span>
                            }
                        </NavLink>
                    }
                    else if (currentUserRole == "User" || currentUserRole == "Admin") //Added Admin
                    {
                        <NavLink class="nav-link" href="user/dashboard" Match="NavLinkMatch.All" title="Dashboard" @onclick="CloseMobileSidebar">
                            <span class="nav-icon">🏠</span>
                            @if (!isSidebarCollapsed)
                            {
                                <span class="nav-text">Dashboard</span>
                            }
                        </NavLink>

                        <NavLink class="nav-link" href="user/tasks" title="My Tasks" @onclick="CloseMobileSidebar">
                            <span class="nav-icon">✅</span>
                            @if (!isSidebarCollapsed)
                            {
                                <span class="nav-text">My Tasks</span>
                            }
                        </NavLink>

                        <NavLink class="nav-link" href="user/calendar" title="Calendar" @onclick="CloseMobileSidebar">
                            <span class="nav-icon">📅</span>
                            @if (!isSidebarCollapsed)
                            {
                                <span class="nav-text">Calendar</span>
                            }
                        </NavLink>

                        <NavLink class="nav-link" href="user/timesheet" title="Timesheet" @onclick="CloseMobileSidebar">
                            <span class="nav-icon">⏱️</span>
                            @if (!isSidebarCollapsed)
                            {
                                <span class="nav-text">Timesheet</span>
                            }
                        </NavLink>
                    }
                </div>
            }
        </div>
    </nav>

    <!-- Quick Actions -->
    <div class="sidebar-footer">
        @if (!isSidebarCollapsed)
        {
            <div class="section-label">QUICK ACTIONS</div>
        }

        <button class="sidebar-link" title="Settings" @onclick="OpenSettings">
            <span class="link-icon">⚙️</span>
            @if (!isSidebarCollapsed)
            {
                <span class="link-text">Settings</span>
            }
        </button>

        <button class="sidebar-link" title="Help" @onclick="OpenHelp">
            <span class="link-icon">❓</span>
            @if (!isSidebarCollapsed)
            {
                <span class="link-text">Help</span>
            }
        </button>

        @if (!string.IsNullOrEmpty(projectCode))
        {
            <div class="project-badge">
                <span class="badge-icon">#</span>
                @if (!isSidebarCollapsed)
                {
                    <span class="badge-text">@projectCode</span>
                }
            </div>
        }
    </div>

    <!-- Toggle Button (Desktop only) -->
    <button class="sidebar-toggle desktop-only" @onclick="ToggleSidebar" @onclick:stopPropagation="true" title="@(isSidebarCollapsed ? "Expand sidebar" : "Collapse sidebar")">
        <span>@(isSidebarCollapsed ? "→" : "←")</span>
    </button>
</aside>

<style>
    /* MOBILE OVERLAY */
    .mobile-overlay {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0, 0, 0, 0.5);
        z-index: 998;
        opacity: 0;
        transition: opacity 0.3s ease;
        pointer-events: none;
    }

        .mobile-overlay.active {
            display: block;
            opacity: 1;
            pointer-events: all;
        }

    /* MOBILE MENU BUTTON */
    .mobile-menu-btn {
        display: none;
        position: fixed;
        top: 20px;
        left: 20px;
        width: 40px;
        height: 40px;
        border-radius: var(--radius-sm);
        border: none;
        background: white;
        color: var(--text-primary);
        cursor: pointer;
        font-size: 1.5rem;
        align-items: center;
        justify-content: center;
        box-shadow: var(--shadow-md);
        transition: all 0.2s;
        z-index: 1001;
    }

        .mobile-menu-btn:hover {
            background: var(--bg-sidebar-hover);
            transform: scale(1.05);
        }

        .mobile-menu-btn:active {
            transform: scale(0.95);
        }

    /* SIDEBAR */
    .app-sidebar {
        width: var(--sidebar-width);
        background: var(--bg-sidebar);
        border-right: 1px solid var(--border-color);
        position: fixed;
        left: 0;
        top: 0;
        bottom: 0;
        display: flex;
        flex-direction: column;
        transition: transform 0.3s ease, width 0.3s ease;
        z-index: 999;
    }

        .app-sidebar.collapsed {
            width: var(--sidebar-collapsed-width);
        }

    /* BRAND */
    .sidebar-brand {
        height: 80px;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 12px;
        padding: 0 var(--space-lg);
        border-bottom: 1px solid var(--border-light);
        flex-shrink: 0;
    }

    .brand-icon {
        font-size: 1.75rem;
    }

    .brand-text {
        font-size: 1.25rem;
        font-weight: 700;
        color: var(--primary-navy);
    }

    /* SIDEBAR NAV */
    .sidebar-nav {
        flex: 1;
        padding: var(--space-lg) var(--space-md);
        overflow-y: auto;
        overflow-x: hidden;
    }

    .nav-section {
        margin-bottom: var(--space-xl);
    }

    .nav-menu {
        display: flex;
        flex-direction: column;
        gap: 4px;
    }

    .nav-link {
        display: flex;
        align-items: center;
        gap: 14px;
        padding: 12px 16px;
        border-radius: var(--radius-sm);
        color: var(--text-sidebar);
        text-decoration: none;
        font-weight: 500;
        font-size: 0.95rem;
        transition: all 0.2s ease;
        position: relative;
    }

        .nav-link:hover {
            background: var(--bg-sidebar-hover);
            color: var(--text-sidebar-active);
        }

        .nav-link.active {
            background: var(--bg-sidebar-active);
            color: var(--text-sidebar-active);
            font-weight: 600;
        }

            .nav-link.active::before {
                content: '';
                position: absolute;
                left: 0;
                top: 50%;
                transform: translateY(-50%);
                width: 4px;
                height: 70%;
                background: var(--primary-navy);
                border-radius: 0 4px 4px 0;
            }

    .nav-icon {
        font-size: 1.25rem;
        display: flex;
        align-items: center;
        justify-content: center;
        min-width: 24px;
    }

    .nav-text {
        white-space: nowrap;
    }

    /* Collapsed state */
    .app-sidebar.collapsed .nav-link {
        justify-content: center;
    }

        /* Tooltip on hover when collapsed */
        .app-sidebar.collapsed .nav-link:hover::after {
            content: attr(title);
            position: absolute;
            left: calc(100% + 12px);
            background: var(--text-primary);
            color: white;
            padding: 8px 14px;
            border-radius: 8px;
            font-size: 0.875rem;
            white-space: nowrap;
            z-index: 1001;
            box-shadow: var(--shadow-md);
        }

    /* SIDEBAR FOOTER */
    .sidebar-footer {
        padding: var(--space-lg) var(--space-md);
        border-top: 1px solid var(--border-light);
        flex-shrink: 0;
    }

    .section-label {
        font-size: 0.7rem;
        font-weight: 700;
        color: var(--text-sidebar);
        letter-spacing: 1px;
        margin-bottom: var(--space-md);
        padding: 0 var(--space-sm);
    }

    .sidebar-link {
        width: 100%;
        display: flex;
        align-items: center;
        gap: var(--space-md);
        padding: 12px var(--space-md);
        background: none;
        border: none;
        border-radius: var(--radius-sm);
        color: var(--text-sidebar);
        cursor: pointer;
        transition: all 0.2s;
        font-size: 0.95rem;
        font-weight: 500;
        text-align: left;
    }

        .sidebar-link:hover {
            background: var(--bg-sidebar-hover);
            color: var(--text-sidebar-active);
        }

    .link-icon {
        font-size: 1.25rem;
        display: flex;
        align-items: center;
        justify-content: center;
        min-width: 24px;
    }

    .app-sidebar.collapsed .sidebar-link {
        justify-content: center;
    }

        .app-sidebar.collapsed .sidebar-link:hover::after {
            content: attr(title);
            position: absolute;
            left: calc(100% + 12px);
            background: var(--text-primary);
            color: white;
            padding: 8px 14px;
            border-radius: 8px;
            font-size: 0.875rem;
            white-space: nowrap;
            z-index: 1001;
            box-shadow: var(--shadow-md);
        }

    .project-badge {
        margin-top: var(--space-md);
        padding: var(--space-sm) var(--space-md);
        background: var(--bg-sidebar-hover);
        border-radius: var(--radius-sm);
        font-family: 'Courier New', monospace;
        font-weight: 700;
        color: var(--text-primary);
        display: flex;
        align-items: center;
        gap: var(--space-sm);
        justify-content: center;
    }

    /* SIDEBAR TOGGLE */
    .sidebar-toggle {
        position: absolute;
        right: -12px;
        top: 90px;
        width: 24px;
        height: 24px;
        border-radius: 50%;
        background: var(--accent-purple);
        color: white;
        border: none;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: var(--shadow-md);
        transition: all 0.2s;
        font-size: 0.875rem;
        z-index: 10;
    }

        .sidebar-toggle:hover {
            transform: scale(1.1);
            background: var(--accent-purple-hover);
        }

        .sidebar-toggle:active {
            transform: scale(0.95);
        }

    /* Scrollbar styling */
    .sidebar-nav::-webkit-scrollbar {
        width: 6px;
    }

    .sidebar-nav::-webkit-scrollbar-track {
        background: transparent;
    }

    .sidebar-nav::-webkit-scrollbar-thumb {
        background: var(--border-color);
        border-radius: 3px;
    }

        .sidebar-nav::-webkit-scrollbar-thumb:hover {
            background: var(--text-muted);
        }

    /* RESPONSIVE */
    @@media (max-width: 1024px) {
        .mobile-menu-btn

    {
        display: flex;
    }

    .app-sidebar {
        transform: translateX(-100%);
    }

        .app-sidebar.mobile-open {
            transform: translateX(0);
        }

    .desktop-only {
        display: none !important;
    }

    /* Always show full sidebar on mobile */
    .app-sidebar.collapsed {
        width: var(--sidebar-width);
    }

        .app-sidebar.collapsed .nav-link,
        .app-sidebar.collapsed .sidebar-link {
            justify-content: flex-start;
        }

            .app-sidebar.collapsed .nav-link:hover::after,
            .app-sidebar.collapsed .sidebar-link:hover::after {
                display: none;
            }

    }

    @@media (max-width: 768px) {
        .mobile-menu-btn

    {
        top: 16px;
        left: 16px;
        width: 36px;
        height: 36px;
    }

    .sidebar-brand {
        height: 70px;
    }

    .brand-icon {
        font-size: 1.5rem;
    }

    .brand-text {
        font-size: 1.125rem;
    }

    .sidebar-nav {
        padding: var(--space-md);
    }

    .sidebar-footer {
        padding: var(--space-md);
    }

    }

    @@media (max-width: 480px) {
        .mobile-menu-btn

    {
        top: 12px;
        left: 12px;
    }

    .app-sidebar {
        width: 280px;
    }

    .sidebar-brand {
        height: 60px;
        padding: 0 var(--space-md);
    }

    }
</style>

@code {
    private bool isSidebarCollapsed = false;
    private bool isMobileSidebarOpen = false;
    private string currentUserRole = string.Empty;
    private string projectCode = "4374151";

    protected override async Task OnInitializedAsync()
    {
        var user = await AuthService.GetCurrentUserAsync();
        if (user != null)
        {
            currentUserRole = user.Role;
        }
    }

    private void ToggleSidebar()
    {
        isSidebarCollapsed = !isSidebarCollapsed;
        StateHasChanged();
    }

    private void ToggleMobileSidebar()
    {
        isMobileSidebarOpen = !isMobileSidebarOpen;
        StateHasChanged();
    }

    private void CloseMobileSidebar()
    {
        isMobileSidebarOpen = false;
        StateHasChanged();
    }

    private void OpenSettings()
    {
        CloseMobileSidebar();
        Navigation.NavigateTo("/settings");
    }

    private void OpenHelp()
    {
        CloseMobileSidebar();
        Console.WriteLine("Help clicked");
    }
}