@* TaskManager.Client/Components/Layout/NavMenu.razor *@
@implements IDisposable
@rendermode @(new InteractiveWebAssemblyRenderMode(prerender: false))
@inject IAuthServiceClient AuthService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

@if (isAuthenticated)
{
    <!-- Mobile Overlay -->
    <div class="mobile-overlay @(isMobileSidebarOpen ? "active" : "")" @onclick="CloseMobileSidebar"></div>

    <aside class="app-sidebar @(isSidebarCollapsed ? "collapsed" : "") @(isMobileSidebarOpen ? "mobile-open" : "")" id="appSidebar">
        <!-- Brand Logo -->
        <div class="sidebar-brand">
            <div class="brand-content">
                <span class="brand-icon">📋</span>
                @if (!isSidebarCollapsed)
                {
                    <span class="brand-text">TaskManager</span>
                }
            </div>
            <button class="mobile-close-btn" @onclick="CloseMobileSidebar" title="Close">
                <span>✕</span>
            </button>
        </div>

        <!-- Navigation Menu -->
        <nav class="sidebar-nav">
            @if (!string.IsNullOrEmpty(currentUserRole))
            {
                <div class="nav-section">
                    @if (!isSidebarCollapsed)
                    {
                        <div class="section-label">MAIN MENU</div>
                    }

                    <div class="nav-menu">
                        @if (currentUserRole == "SuperAdmin")
                        {
                            <NavLink class="nav-link" href="superadmin/dashboard" Match="NavLinkMatch.All" title="Dashboard" @onclick="CloseMobileSidebar">
                                <span class="nav-icon">🏠</span>
                                @if (!isSidebarCollapsed)
                                {
                                    <span class="nav-text">Dashboard</span>
                                }
                            </NavLink>

                            <NavLink class="nav-link" href="superadmin/organizations" title="Organizations" @onclick="CloseMobileSidebar">
                                <span class="nav-icon">🏢</span>
                                @if (!isSidebarCollapsed)
                                {
                                    <span class="nav-text">Organizations</span>
                                }
                            </NavLink>

                            <NavLink class="nav-link" href="superadmin/users" title="All Users" @onclick="CloseMobileSidebar">
                                <span class="nav-icon">👥</span>
                                @if (!isSidebarCollapsed)
                                {
                                    <span class="nav-text">All Users</span>
                                }
                            </NavLink>

                            <NavLink class="nav-link" href="superadmin/reports" title="Reports" @onclick="CloseMobileSidebar">
                                <span class="nav-icon">📊</span>
                                @if (!isSidebarCollapsed)
                                {
                                    <span class="nav-text">Reports</span>
                                }
                            </NavLink>
                        }
                        else if (currentUserRole == "OrganizationAdmin" || currentUserRole == "Admin")
                        {
                            <NavLink class="nav-link" href="admin/dashboard" Match="NavLinkMatch.All" title="Dashboard" @onclick="CloseMobileSidebar">
                                <span class="nav-icon">🏠</span>
                                @if (!isSidebarCollapsed)
                                {
                                    <span class="nav-text">Dashboard</span>
                                }
                            </NavLink>

                            <NavLink class="nav-link" href="admin/managers" title="Managers" @onclick="CloseMobileSidebar">
                                <span class="nav-icon">👔</span>
                                @if (!isSidebarCollapsed)
                                {
                                    <span class="nav-text">Managers</span>
                                }
                            </NavLink>

                            <NavLink class="nav-link" href="admin/reports" title="Reports" @onclick="CloseMobileSidebar">
                                <span class="nav-icon">📊</span>
                                @if (!isSidebarCollapsed)
                                {
                                    <span class="nav-text">Reports</span>
                                }
                            </NavLink>
                        }
                        else if (currentUserRole == "Manager")
                        {
                            <NavLink class="nav-link" href="manager/dashboard" Match="NavLinkMatch.All" title="Dashboard" @onclick="CloseMobileSidebar">
                                <span class="nav-icon">🏠</span>
                                @if (!isSidebarCollapsed)
                                {
                                    <span class="nav-text">Dashboard</span>
                                }
                            </NavLink>

                            <NavLink class="nav-link" href="manager/projects" title="Projects" @onclick="CloseMobileSidebar">
                                <span class="nav-icon">📁</span>
                                @if (!isSidebarCollapsed)
                                {
                                    <span class="nav-text">Projects</span>
                                }
                            </NavLink>

                            <NavLink class="nav-link" href="manager/tasks" title="Tasks" @onclick="CloseMobileSidebar">
                                <span class="nav-icon">✅</span>
                                @if (!isSidebarCollapsed)
                                {
                                    <span class="nav-text">Tasks</span>
                                }
                            </NavLink>

                            <NavLink class="nav-link" href="manager/users" title="Team Members" @onclick="CloseMobileSidebar">
                                <span class="nav-icon">👥</span>
                                @if (!isSidebarCollapsed)
                                {
                                    <span class="nav-text">Team Members</span>
                                }
                            </NavLink>

                            <NavLink class="nav-link" href="manager/project-users" title="Project Mapping" @onclick="CloseMobileSidebar">
                                <span class="nav-icon">🔗</span>
                                @if (!isSidebarCollapsed)
                                {
                                    <span class="nav-text">Project Mapping</span>
                                }
                            </NavLink>
                        }
                        else if (currentUserRole == "User")
                        {
                            <NavLink class="nav-link" href="user/dashboard" Match="NavLinkMatch.All" title="Dashboard" @onclick="CloseMobileSidebar">
                                <span class="nav-icon">🏠</span>
                                @if (!isSidebarCollapsed)
                                {
                                    <span class="nav-text">Dashboard</span>
                                }
                            </NavLink>

                            <NavLink class="nav-link" href="user/tasks" title="My Tasks" @onclick="CloseMobileSidebar">
                                <span class="nav-icon">✅</span>
                                @if (!isSidebarCollapsed)
                                {
                                    <span class="nav-text">My Tasks</span>
                                }
                            </NavLink>
                        }
                    </div>
                </div>
            }
        </nav>

        <!-- Sidebar Footer -->
        <div class="sidebar-footer">
            @if (!isSidebarCollapsed)
            {
                <div class="section-label">ACCOUNT</div>
            }

            @if (!string.IsNullOrEmpty(currentUserName))
            {
                <div class="user-profile">
                    <div class="avatar avatar-sm">@currentUserInitial</div>
                    @if (!isSidebarCollapsed)
                    {
                        <div class="user-info">
                            <div class="user-name">@currentUserName</div>
                            <div class="user-role">@currentUserRole</div>
                        </div>
                    }
                </div>
            }

            <button class="sidebar-link logout-btn" title="Logout" @onclick="HandleLogout">
                <span class="link-icon">🚪</span>
                @if (!isSidebarCollapsed)
                {
                    <span class="link-text">Logout</span>
                }
            </button>
        </div>

        <!-- Toggle Button (Desktop only) -->
        <button class="sidebar-toggle desktop-only" @onclick="ToggleSidebar" title="@(isSidebarCollapsed ? "Expand sidebar" : "Collapse sidebar")">
            <span>@(isSidebarCollapsed ? "→" : "←")</span>
        </button>
    </aside>
}

<style>
