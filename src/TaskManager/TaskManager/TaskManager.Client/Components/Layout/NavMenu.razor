        height: 80px;
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 0 var(--space-lg);
        border-bottom: 1px solid var(--border-light);
        flex-shrink: 0;
    }

    .brand-content {
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .brand-icon {
        font-size: 1.75rem;
    }

    .brand-text {
        font-size: 1.25rem;
        font-weight: 700;
        color: var(--primary-navy);
    }

    /* MOBILE CLOSE BUTTON - Integrated in brand */
