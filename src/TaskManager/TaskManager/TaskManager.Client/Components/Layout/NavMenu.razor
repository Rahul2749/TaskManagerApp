        background: var(--bg-sidebar);
        border-right: 1px solid var(--border-color);
        position: fixed;
        left: 0;
        top: 0;
        bottom: 0;
        display: flex;
        flex-direction: column;
        transition: transform 0.3s ease, width 0.3s ease;
        z-index: 999;
    }

