        font-size: 0.7rem;
        font-weight: 700;
        color: var(--text-sidebar);
        letter-spacing: 1px;
        margin-bottom: var(--space-md);
        padding: 0 var(--space-sm);
    }

    .nav-menu {
        display: flex;
        flex-direction: column;
