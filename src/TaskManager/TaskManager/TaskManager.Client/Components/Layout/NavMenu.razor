    }

    }
</style>

@code {
    private bool isSidebarCollapsed = false;
    private bool isMobileSidebarOpen = false;
    private bool isAuthenticated = false;
    private string currentUserRole = string.Empty;
    private string currentUserName = string.Empty;
    private string currentUserInitial = "U";

    protected override async Task OnInitializedAsync()
    {
        await LoadUserData();

        // Subscribe to authentication state changes
        Navigation.LocationChanged += OnLocationChanged;
    }

    private async void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        await LoadUserData();
        StateHasChanged();
    }

    private async Task LoadUserData()
    {
        var user = await AuthService.GetCurrentUserAsync();
        isAuthenticated = user != null;

        if (user != null)
        {
            currentUserRole = user.Role;
            currentUserName = user.FullName ?? user.Username;
            currentUserInitial = string.IsNullOrEmpty(user.FirstName)
                ? user.Username.Substring(0, 1).ToUpper()
                : user.FirstName.Substring(0, 1).ToUpper();
        }
        else
        {
            currentUserRole = string.Empty;
            currentUserName = string.Empty;
            currentUserInitial = "U";
        }
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && isAuthenticated)
        {
            await JSRuntime.InvokeVoidAsync("eval", @"
                window.toggleMobileSidebar = function() {
                    const sidebar = document.getElementById('appSidebar');
                    const overlay = document.querySelector('.mobile-overlay');
                    if (sidebar && overlay) {
                        sidebar.classList.toggle('mobile-open');
                        overlay.classList.toggle('active');
                    }
                }

                window.updateMainLayoutMargin = function(isCollapsed) {
                    const mainContent = document.querySelector('.app-main');
                    if (mainContent) {
                        if (window.innerWidth > 1024) {
                            mainContent.style.marginLeft = isCollapsed ? '80px' : '250px';
                        } else {
                            mainContent.style.marginLeft = '0';
                        }
                    }
                }

                window.addEventListener('resize', function() {
                    const mainContent = document.querySelector('.app-main');
                    const sidebar = document.getElementById('appSidebar');
                    if (mainContent && sidebar) {
                        const isCollapsed = sidebar.classList.contains('collapsed');
                        if (window.innerWidth > 1024) {
                            mainContent.style.marginLeft = isCollapsed ? '80px' : '250px';
                            sidebar.classList.remove('mobile-open');
                            document.querySelector('.mobile-overlay')?.classList.remove('active');
                        } else {
                            mainContent.style.marginLeft = '0';
                        }
                    }
                });
            ");
        }

        if (isAuthenticated)
        {
            await JSRuntime.InvokeVoidAsync("updateMainLayoutMargin", isSidebarCollapsed);
        }
    }

    private void ToggleSidebar()
    {
        isSidebarCollapsed = !isSidebarCollapsed;
        StateHasChanged();
    }

    private async void CloseMobileSidebar()
    {
        isMobileSidebarOpen = false;
        await JSRuntime.InvokeVoidAsync("eval", @"
            const sidebar = document.getElementById('appSidebar');
            const overlay = document.querySelector('.mobile-overlay');
            if (sidebar && overlay) {
                sidebar.classList.remove('mobile-open');
                overlay.classList.remove('active');
            }
        ");
        StateHasChanged();
    }

    private async Task HandleLogout()
    {
        CloseMobileSidebar();
        await AuthService.LogoutAsync();
        Navigation.NavigateTo("/", true);
    }

    public void Dispose()
    {
        Navigation.LocationChanged -= OnLocationChanged;
    }
}